    <style>
          :root {
            --primary: #FFC107;
            --primary-dark: #FFA000;
            --primary-light: #FFECB3;
            --secondary: #212121;
            --light: #FFFDE7;
            --dark: #212121;
            --gray: #757575;
            --light-gray: #F5F5F5;
            --border: #E0E0E0;
            --danger: #D32F2F;
            --success: #388E3C;
            --warning: #F57C00;
            --info: #1976D2;
        }
        
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
        
        body {
            background-color: var(--light);
            color: var(--dark);
            line-height: 1.6;
            font-size: 14px;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 15px;
        }

        header {
            background: linear-gradient(135deg, var(--primary), var(--primary-dark));
            color: var(--dark);
            padding: 15px 0;
            border-radius: 8px;
            margin-bottom: 20px;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        }

        .header-content {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 0 15px;
        }

        .logo {
            display: flex;
            align-items: center;
            gap: 10px;
        }

            .logo i {
                font-size: 1.5rem;
            }

            .logo h1 {
                font-size: 1.4rem;
                font-weight: 700;
            }

        .user-info {
            display: flex;
            align-items: center;
            gap: 8px;
            font-weight: 600;
        }

        .user-avatar {
            width: 32px;
            height: 32px;
            border-radius: 50%;
            background-color: var(--secondary);
            display: flex;
            align-items: center;
            justify-content: center;
            color: var(--primary);
            font-weight: bold;
            font-size: 0.9rem;
        }

        .menu-bar {
            display: flex;
            background-color: white;
            border-radius: 8px;
            overflow: hidden;
            margin-bottom: 20px;
            box-shadow: 0 1px 5px rgba(0, 0, 0, 0.05);
        }

        .menu-itemlocal {
            flex: 1;
            text-align: center;
            padding: 15px;
            cursor: pointer;
            transition: all 0.3s ease;
            font-weight: 600;
            color: var(--gray);
            font-size: 0.9rem;
            border-right: 1px solid var(--border);
        }

            .menu-itemlocal:last-child {
                border-right: none;
            }

            .menu-itemlocal.active {
                background-color: var(--primary);
                color: var(--dark);
            }

            .menu-itemlocal:hover:not(.active) {
                background-color: var(--primary-light);
            }

        .content-section {
            display: none;
            background-color: white;
            border-radius: 8px;
            padding: 20px;
            box-shadow: 0 1px 5px rgba(0, 0, 0, 0.05);
            margin-bottom: 20px;
        }

            .content-section.active {
                display: block;
            }

        .section-title {
            font-size: 1.2rem;
            margin-bottom: 15px;
            color: var(--dark);
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .upload-area {
            border: 2px dashed var(--border);
            border-radius: 8px;
            padding: 30px 15px;
            text-align: center;
            margin-bottom: 20px;
            transition: all 0.3s ease;
            cursor: pointer;
        }

            .upload-area:hover {
                border-color: var(--primary);
                background-color: var(--primary-light);
            }

        .upload-icon {
            font-size: 2.5rem;
            color: var(--primary);
            margin-bottom: 10px;
        }

        .btn {
            padding: 10px 18px;
            border: none;
            border-radius: 5px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            display: inline-flex;
            align-items: center;
            gap: 6px;
            font-size: 0.9rem;
        }

        .btn-primary {
            background-color: var(--primary);
            color: var(--dark);
        }

            .btn-primary:hover {
                background-color: var(--primary-dark);
            }

        .btn-secondary {
            background-color: var(--light-gray);
            color: var(--dark);
        }

            .btn-secondary:hover {
                background-color: var(--border);
            }

        .btn-success {
            background-color: var(--success);
            color: white;
        }

        .btn-danger {
            background-color: var(--danger);
            color: white;
        }

        .form-group {
            margin-bottom: 15px;
        }

        .form-row {
            display: flex;
            gap: 15px;
            margin-bottom: 15px;
        }

        .form-col {
            flex: 1;
        }

        label {
            display: block;
            margin-bottom: 6px;
            font-weight: 600;
            color: var(--dark);
            font-size: 0.9rem;
        }

        input, select, textarea {
            width: 100%;
            padding: 10px 12px;
            border: 1px solid var(--border);
            border-radius: 5px;
            font-size: 0.9rem;
            transition: all 0.3s ease;
        }

            input:focus, select:focus, textarea:focus {
                outline: none;
                border-color: var(--primary);
                box-shadow: 0 0 0 2px rgba(255, 193, 7, 0.2);
            }

        .attendee-list {
            margin-top: 20px;
        }

        .table-container {
            overflow-x: auto;
            border-radius: 8px;
            box-shadow: 0 1px 5px rgba(0, 0, 0, 0.05);
        }

        table {
            width: 100%;
            border-collapse: collapse;
            background-color: white;
            font-size: 0.85rem;
        }

        th, td {
            padding: 12px;
            text-align: left;
            border-bottom: 1px solid var(--border);
        }

        th {
            background-color: var(--light-gray);
            font-weight: 600;
            color: var(--dark);
            position: relative;
        }

        tr:hover {
            background-color: var(--primary-light);
        }

        .action-buttons {
            display: flex;
            gap: 8px;
        }

        .action-btn {
            padding: 5px 8px;
            border: none;
            border-radius: 3px;
            cursor: pointer;
            transition: all 0.3s ease;
            font-size: 0.8rem;
        }

        .edit-btn {
            background-color: var(--warning);
            color: white;
        }

        .delete-btn {
            background-color: var(--danger);
            color: white;
        }

        .stats {
            display: flex;
            gap: 15px;
            margin-bottom: 20px;
        }

        .stat-card {
            flex: 1;
            background-color: white;
            border-radius: 8px;
            padding: 15px;
            box-shadow: 0 1px 5px rgba(0, 0, 0, 0.05);
            display: flex;
            align-items: center;
            gap: 12px;
        }

        .stat-icon {
            width: 50px;
            height: 50px;
            border-radius: 8px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.2rem;
        }

        .stat-1 .stat-icon {
            background-color: var(--primary-light);
            color: var(--primary-dark);
        }

        .stat-2 .stat-icon {
            background-color: var(--primary-light);
            color: var(--primary-dark);
        }

        .stat-3 .stat-icon {
            background-color: var(--primary-light);
            color: var(--primary-dark);
        }

        .stat-info h3 {
            font-size: 1.4rem;
            margin-bottom: 3px;
        }

        .stat-info p {
            color: var(--gray);
            font-size: 0.8rem;
        }

        footer {
            text-align: center;
            margin-top: 30px;
            padding: 15px;
            color: var(--gray);
            font-size: 0.8rem;
        }

        .notification {
            position: fixed;
            top: 20px;
            right: 20px;
            padding: 15px 20px;
            border-radius: 5px;
            background-color: var(--success);
            color: white;
            box-shadow: 0 3px 10px rgba(0, 0, 0, 0.2);
            z-index: 1000;
            display: flex;
            align-items: center;
            gap: 10px;
            transform: translateX(150%);
            transition: transform 0.3s ease;
        }

            .notification.show {
                transform: translateX(0);
            }

            .notification.error {
                background-color: var(--danger);
            }

            .notification.warning {
                background-color: var(--warning);
            }

        .modal {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
            z-index: 2000;
            align-items: center;
            justify-content: center;
        }

            .modal.show {
                display: flex;
            }

        .modal-content {
            background-color: white;
            border-radius: 8px;
            width: 90%;
            max-width: 600px;
            max-height: 90vh;
            overflow-y: auto;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
        }

        .modal-header {
            padding: 15px 20px;
            border-bottom: 1px solid var(--border);
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .modal-title {
            font-size: 1.2rem;
            font-weight: 600;
            color: var(--dark);
        }

        .modal-close {
            background: none;
            border: none;
            font-size: 1.5rem;
            cursor: pointer;
            color: var(--gray);
        }

        .modal-body {
            padding: 20px;
        }

        .modal-footer {
            padding: 15px 20px;
            border-top: 1px solid var(--border);
            display: flex;
            justify-content: flex-end;
            gap: 10px;
        }

        .action-bar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
            padding-bottom: 15px;
            border-bottom: 1px solid var(--border);
        }

        .filter-row {
            display: flex;
            gap: 10px;
            margin-bottom: 15px;
            flex-wrap: wrap;
        }

        .filter-input {
            flex: 1;
            min-width: 120px;
        }

        .filter-header {
            display: flex;
            flex-direction: column;
            gap: 5px;
        }

        .filter-clear {
            background: none;
            border: none;
            color: var(--primary);
            cursor: pointer;
            font-size: 0.8rem;
            text-align: left;
            padding: 0;
            margin-top: 2px;
        }

            .filter-clear:hover {
                text-decoration: underline;
            }

        .access-points-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
            gap: 15px;
            margin-top: 20px;
        }

        .access-point-card {
            border: 1px solid var(--border);
            border-radius: 8px;
            padding: 15px;
            background-color: white;
            transition: all 0.3s ease;
        }

            .access-point-card:hover {
                box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
                border-color: var(--primary);
            }

        .access-point-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 10px;
        }

        .access-point-name {
            font-weight: 600;
            font-size: 1rem;
        }

        .access-point-status {
            padding: 3px 8px;
            border-radius: 12px;
            font-size: 0.75rem;
            font-weight: 600;
        }

        .status-active {
            background-color: #E8F5E9;
            color: var(--success);
        }

        .status-inactive {
            background-color: #F5F5F5;
            color: var(--gray);
        }

        .access-point-details {
            font-size: 0.85rem;
            color: var(--gray);
            margin-bottom: 10px;
        }

        .access-point-actions {
            display: flex;
            gap: 8px;
        }

        .assign-container {
            display: flex;
            gap: 20px;
            margin-top: 20px;
        }

        .assign-column {
            flex: 1;
            border: 1px solid var(--border);
            border-radius: 8px;
            padding: 15px;
            background-color: white;
        }

        .assign-column-header {
            font-weight: 600;
            margin-bottom: 10px;
            padding-bottom: 8px;
            border-bottom: 1px solid var(--border);
        }

        .assign-item {
            padding: 10px;
            border: 1px solid var(--border);
            border-radius: 5px;
            margin-bottom: 8px;
            cursor: pointer;
            transition: all 0.3s ease;
        }

            .assign-item:hover {
                background-color: var(--primary-light);
                border-color: var(--primary);
            }

            .assign-item.selected {
                background-color: var(--primary);
                border-color: var(--primary-dark);
            }

        .assign-actions {
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 10px;
            margin-top: 20px;
        }

        .assignments-table {
            margin-top: 20px;
        }

        @@media (max-width: 768px) {
            .form-row

        {
            flex-direction: column;
            gap: 0;
        }

        .stats {
            flex-direction: column;
        }

        .header-content {
            flex-direction: column;
            gap: 10px;
            text-align: center;
        }

        .action-buttons {
            flex-direction: column;
        }

        .action-bar {
            flex-direction: column;
            gap: 15px;
            align-items: flex-start;
        }

        .filter-row {
            flex-direction: column;
        }

        .filter-input {
            min-width: 100%;
        }

        .access-points-grid {
            grid-template-columns: 1fr;
        }

        .assign-container {
            flex-direction: column;
        }

        }
    </style>
 
 
    <div class="container">
       

        <div class="stats">
            <div class="stat-card stat-1">
                <div class="stat-icon">
                    <i class="fas fa-user-check"></i>
                </div>
                <div class="stat-info">
                    <h3 id="totalAttendees">0</h3>
                    <p>Total Attendees</p>
                </div>
            </div>
            <div class="stat-card stat-2" style="display:none;">
                <div class="stat-icon">
                    <i class="fas fa-upload"></i>
                </div>
                <div class="stat-info">
                    <h3 id="bulkUploads">0</h3>
                    <p>Bulk Uploads</p>
