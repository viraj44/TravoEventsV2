    <script>
                // Sample data for the application
                const sampleAttendees = [

                    // { id: 'A-001', firstName: 'John', lastName: 'Smith', email: 'john.smith@example.com', phone: '(555) 123-4567', company: 'Tech Corp', department: 'Executive', notes: 'VIP guest' },
                    // { id: 'A-002', firstName: 'Sarah', lastName: 'Johnson', email: 'sarah.j@example.com', phone: '(555) 987-6543', company: 'Innovate Ltd', department: 'Technology', notes: '' },
                    // { id: 'A-003', firstName: 'Michael', lastName: 'Brown', email: 'm.brown@example.com', phone: '(555) 456-7890', company: 'Global Solutions', department: 'Management', notes: 'Keynote speaker' },
                    // { id: 'A-004', firstName: 'Emily', lastName: 'Davis', email: 'emily.davis@example.com', phone: '(555) 234-5678', company: 'Creative Minds', department: 'Design', notes: '' }
                ];

                // Sample access points
                const sampleAccessPoints = [
                    { id: 'AP-001', name: 'Main Entrance', location: 'Building A, Floor 1', type: 'entrance', status: 'active', description: 'Primary event entrance' },
                    { id: 'AP-002', name: 'Food Counter', location: 'Building B, Floor 2', type: 'checkpoint', status: 'active', description: 'Food Section' },
                   ];

                // Application state
                let attendees = JSON.parse(localStorage.getItem('attendees')) || [...sampleAttendees];
                let accessPoints = JSON.parse(localStorage.getItem('accessPoints')) || [...sampleAccessPoints];
                let assignments = JSON.parse(localStorage.getItem('assignments')) || [];
                let currentPage = 1;
                const attendeesPerPage = 5;
                let editingId = null;
                let bulkUploads = parseInt(localStorage.getItem('bulkUploads')) || 0;
                let manualEdits = parseInt(localStorage.getItem('manualEdits')) || 0;
                let searchTerm = '';
                let uploadedData = [];

                // Selection state for assignments
                let selectedAttendee = null;
                let selectedAccessPoint = null;

                // Filter state
                let activeFilters = {
                    id: '',
                    name: '',
                    email: '',
                    phone: '',
                    company: '',
                    department: ''
                };

                // DOM Elements
                const notification = document.getElementById('notification');
                const notificationText = document.getElementById('notificationText');
                const bulkUploadModal = document.getElementById('bulkUploadModal');

                // Initialize the application
                document.addEventListener('DOMContentLoaded', () => {
                    updateStats();
                    renderAttendeesTable();
                    renderAccessPoints();
                    renderAssignments();
                    setupEventListeners();
                });

                // Set up event listeners

                // Set up event listeners
                function setupEventListeners() {
                    // Menu switching
                    document.querySelectorAll('.menu-itemlocal').forEach(item => {
                        item.addEventListener('click', () => {
                            // Remove active class from all menu items and content sections
                            document.querySelectorAll('.menu-itemlocal').forEach(i => i.classList.remove('active'));
                            document.querySelectorAll('.content-section').forEach(s => s.classList.remove('active'));

                            // Add active class to clicked menu item and corresponding section
                            item.classList.add('active');
                            const sectionId = item.getAttribute('data-section');
                            document.getElementById(sectionId).classList.add('active');
                        });
                    });

                    // Form submission
                    document.getElementById('attendeeForm').addEventListener('submit', handleAttendeeSubmit);
                    document.getElementById('accessPointForm').addEventListener('submit', handleAccessPointSubmit);

                    // Buttons
                    document.getElementById('bulkUploadBtn').addEventListener('click', () => {
                        bulkUploadModal.classList.add('show');
                    });

                    document.getElementById('modalClose').addEventListener('click', () => {
                        bulkUploadModal.classList.remove('show');
                    });

                    document.getElementById('browseBtn').addEventListener('click', () => {
                        document.getElementById('fileInput').click();
                    });

                    document.getElementById('fileInput').addEventListener('change', handleFileUpload);

                    document.getElementById('downloadTemplateBtn').addEventListener('click', downloadTemplate);
                    document.getElementById('modalUploadBtn').addEventListener('click', processBulkUpload);

                    document.getElementById('cancelBtn').addEventListener('click', resetForm);
                    document.getElementById('deleteBtn').addEventListener('click', deleteAttendee);

                    // Search and filter
                    document.getElementById('searchBtn').addEventListener('click', handleSearch);
                    document.getElementById('clearSearchBtn').addEventListener('click', clearSearch);
                    document.getElementById('clearFiltersBtn').addEventListener('click', clearFilters);

                    // Pagination
                    document.getElementById('prevBtn').addEventListener('click', () => changePage(-1));
                    document.getElementById('nextBtn').addEventListener('click', () => changePage(1));

                    // Export
                    document.getElementById('exportBtn').addEventListener('click', exportToExcel);

                    // Assignment buttons
                    document.getElementById('assignBtn').addEventListener('click', assignAccessPoint);
                    document.getElementById('unassignBtn').addEventListener('click', unassignAccessPoint);

                    // Filter clearing
                    document.querySelectorAll('.filter-clear').forEach(button => {
                        button.addEventListener('click', (e) => {
                            const filter = e.target.getAttribute('data-filter');
                            clearFilter(filter);
                        });
                    });

                    // Real-time filtering
                    document.getElementById('filterId').addEventListener('input', (e) => applyFilter('id', e.target.value));
                    document.getElementById('filterName').addEventListener('input', (e) => applyFilter('name', e.target.value));
                    document.getElementById('filterEmail').addEventListener('input', (e) => applyFilter('email', e.target.value));
                    document.getElementById('filterPhone').addEventListener('input', (e) => applyFilter('phone', e.target.value));
                    document.getElementById('filterCompany').addEventListener('input', (e) => applyFilter('company', e.target.value));
                    document.getElementById('filterDepartment').addEventListener('input', (e) => applyFilter('department', e.target.value));
                }

                // Handle attendee form submission
                function handleAttendeeSubmit(e) {
                    e.preventDefault();

                    const formData = {
                        firstName: document.getElementById('firstName').value,
                        lastName: document.getElementById('lastName').value,
                        email: document.getElementById('email').value,
                        phone: document.getElementById('phone').value,
                        company: document.getElementById('company').value,
                        department: document.getElementById('department').value,
                        notes: document.getElementById('notes').value
                    };

                    if (editingId) {
                        // Update existing attendee
                        const index = attendees.findIndex(a => a.id === editingId);
                        if (index !== -1) {
                            attendees[index] = { ...attendees[index], ...formData };
                            manualEdits++;
                            localStorage.setItem('manualEdits', manualEdits);
                            showNotification('Attendee updated successfully!');
                        }
                    } else {
                        // Create new attendee
                        const newId = 'A-' + String(attendees.length + 1).padStart(3, '0');
                        attendees.push({ id: newId, ...formData });
                        manualEdits++;
                        localStorage.setItem('manualEdits', manualEdits);
                        showNotification('Attendee created successfully!');
                    }

                    saveData();
                    updateStats();
                    renderAttendeesTable();
                    resetForm();
                }

                // Handle access point form submission
                function handleAccessPointSubmit(e) {
                    e.preventDefault();

                    const formData = {
                        name: document.getElementById('accessPointName').value,
                        location: document.getElementById('accessPointLocation').value,
                        type: document.getElementById('accessPointType').value,
                        status: document.getElementById('accessPointStatus').value,
                        description: document.getElementById('accessPointDescription').value
                    };

                    const newId = 'AP-' + String(accessPoints.length + 1).padStart(3, '0');
                    accessPoints.push({ id: newId, ...formData });

                    saveData();
                    renderAccessPoints();
                    document.getElementById('accessPointForm').reset();
                    showNotification('Access point created successfully!');
                }

                // Handle file upload for bulk import
                function handleFileUpload(e) {
                    const file = e.target.files[0];
                    if (!file) return;

                    const reader = new FileReader();
                    reader.onload = function (e) {
                        const data = new Uint8Array(e.target.result);
                        const workbook = XLSX.read(data, { type: 'array' });
                        const firstSheet = workbook.Sheets[workbook.SheetNames[0]];
                        const jsonData = XLSX.utils.sheet_to_json(firstSheet);

                        uploadedData = jsonData;
                        renderPreviewTable(jsonData);
                    };
                    reader.readAsArrayBuffer(file);
                }

                // Render preview table for bulk upload
                function renderPreviewTable(data) {
                    const tbody = document.querySelector('#previewTable tbody');
                    tbody.innerHTML = '';

                    data.slice(0, 5).forEach(row => {
                        const tr = document.createElement('tr');
                        tr.innerHTML = `
        <td>${row.firstName || ''}</td>
        <td>${row.lastName || ''}</td>
        <td>${row.email || ''}</td>
        <td>${row.phone || ''}</td>
        <td>${row.company || ''}</td>
        <td>${row.department || ''}</td>
        <td>${row.notes || ''}</td>
                            `;
                        tbody.appendChild(tr);
                    });

                    if (data.length > 5) {
                        const tr = document.createElement('tr');
                        tr.innerHTML = `<td colspan="7" style="text-align: center; font-style: italic;">... and ${data.length - 5} more rows</td>`;
                        tbody.appendChild(tr);
                    }
                }

                // Process bulk upload
                function processBulkUpload() {
                    if (uploadedData.length === 0) {
                        showNotification('Please upload a file first!', 'error');
                        return;
                    }

                    const option = document.querySelector('input[name="uploadOption"]:checked').value;

                    if (option === 'create') {
                        // Create new attendees
                        uploadedData.forEach(attendee => {
                            const newId = 'A-' + String(attendees.length + 1).padStart(3, '0');
                            attendees.push({ id: newId, ...attendee });
                        });
                        showNotification(`${uploadedData.length} attendees created successfully!`);
                    } else {
                        // Update existing attendees by email
                        let updatedCount = 0;
                        uploadedData.forEach(uploadedAttendee => {
                            const index = attendees.findIndex(a => a.email === uploadedAttendee.email);
                            if (index !== -1) {
                                attendees[index] = { ...attendees[index], ...uploadedAttendee };
                                updatedCount++;
                            }
                        });
                        showNotification(`${updatedCount} attendees updated successfully!`);
                    }

                    bulkUploads++;
                    localStorage.setItem('bulkUploads', bulkUploads);

                    saveData();
                    updateStats();
                    renderAttendeesTable();
                    bulkUploadModal.classList.remove('show');
                    uploadedData = [];
                }

                // Download Excel template
                function downloadTemplate() {
                    const templateData = [
                        ['firstName', 'lastName', 'email', 'phone', 'company', 'department', 'notes'],
                        ['John', 'Doe', 'john.doe@example.com', '(555) 123-4567', 'Example Corp', 'IT', 'VIP guest'],
                        ['Jane', 'Smith', 'jane.smith@example.com', '(555) 987-6543', 'Sample Ltd', 'Marketing', '']
                    ];

                    const ws = XLSX.utils.aoa_to_sheet(templateData);
                    const wb = XLSX.utils.book_new();
                    XLSX.utils.book_append_sheet(wb, ws, 'Template');
                    XLSX.writeFile(wb, 'attendee_template.xlsx');
                }

                // Render attendees table
                function renderAttendeesTable() {
                    const tbody = document.querySelector('#attendeesTable tbody');
                    tbody.innerHTML = '';

                    const filteredAttendees = filterAttendees();
                    const paginatedAttendees = paginateAttendees(filteredAttendees);

                    paginatedAttendees.forEach(attendee => {
                        const tr = document.createElement('tr');
                        tr.innerHTML = `
        <td>${attendee.id}</td>
        <td>${attendee.firstName} ${attendee.lastName}</td>
        <td>${attendee.email}</td>
        <td>${attendee.phone}</td>
        <td>${attendee.company}</td>
        <td>${attendee.department}</td>
        <td class="action-buttons">
                <button class="action-btn edit-btn" data-id="${attendee.id}">
                    <i class="fas fa-edit"></i> Edit
                </button>
                <button class="action-btn delete-btn" data-id="${attendee.id}">
                    <i class="fas fa-trash"></i> Delete
                </button>
        </td>
                            `;
                        tbody.appendChild(tr);
                    });

                    // Update pagination info
                    const startIndex = (currentPage - 1) * attendeesPerPage + 1;
                    const endIndex = Math.min(currentPage * attendeesPerPage, filteredAttendees.length);
                    document.getElementById('paginationInfo').textContent =
                        `Showing ${startIndex} to ${endIndex} of ${filteredAttendees.length} attendees`;

                    // Add event listeners to action buttons
                    document.querySelectorAll('.edit-btn').forEach(btn => {
                        btn.addEventListener('click', (e) => {
                            const id = e.target.closest('button').getAttribute('data-id');
                            editAttendee(id);
                        });
                    });

                    document.querySelectorAll('.delete-btn').forEach(btn => {
                        btn.addEventListener('click', (e) => {
                            const id = e.target.closest('button').getAttribute('data-id');
                            deleteAttendee(id);
                        });
                    });
                }

                // Render access points
                function renderAccessPoints() {
                    const container = document.getElementById('existingAccessPoints');
                    container.innerHTML = '';

                    accessPoints.forEach(ap => {
                        const card = document.createElement('div');
                        card.className = 'access-point-card';
                        card.innerHTML = `
        <div class="access-point-header">
                <div class="access-point-name">${ap.name}</div>
                <div class="access-point-status ${ap.status === 'active' ? 'status-active' : 'status-inactive'}">
                    ${ap.status}
                </div>
        </div>
        <div class="access-point-details">
                <div><strong>Location:</strong> ${ap.location}</div>
                <div><strong>Type:</strong> ${ap.type}</div>
                <div>${ap.description}</div>
        </div>
        <div class="access-point-actions">
                <button class="action-btn edit-btn" data-id="${ap.id}">
                    <i class="fas fa-edit"></i> Edit
                </button>
                <button class="action-btn delete-btn" data-id="${ap.id}">
                    <i class="fas fa-trash"></i> Delete
                </button>
        </div>
                            `;
                        container.appendChild(card);
                    });
                }

                // Render assignments
                function renderAssignments() {
                    const tbody = document.querySelector('#assignmentsTable tbody');
                    tbody.innerHTML = '';

                    assignments.forEach(assignment => {
                        const attendee = attendees.find(a => a.id === assignment.attendeeId);
                        const accessPoint = accessPoints.find(ap => ap.id === assignment.accessPointId);

                        if (attendee && accessPoint) {
                            const tr = document.createElement('tr');
                            tr.innerHTML = `
        <td>${attendee.firstName} ${attendee.lastName}</td>
        <td>${accessPoint.name}</td>
        <td>${accessPoint.location}</td>
        <td>${assignment.assignedDate}</td>
        <td class="action-buttons">
                <button class="action-btn delete-btn" data-id="${assignment.id}">
                    <i class="fas fa-trash"></i> Remove
                </button>
        </td>
                                `;
                            tbody.appendChild(tr);
                        }
                    });
                }

                // Edit attendee
                function editAttendee(id) {
                    const attendee = attendees.find(a => a.id === id);
                    if (!attendee) return;

                    document.getElementById('firstName').value = attendee.firstName;
                    document.getElementById('lastName').value = attendee.lastName;
                    document.getElementById('email').value = attendee.email;
                    document.getElementById('phone').value = attendee.phone;
                    document.getElementById('company').value = attendee.company;
                    document.getElementById('department').value = attendee.department;
                    document.getElementById('notes').value = attendee.notes;

                    editingId = id;
                    document.getElementById('deleteBtn').style.display = 'inline-block';

                    // Switch to manage attendees section
                    document.querySelectorAll('.menu-itemlocal').forEach(i => i.classList.remove('active'));
                    document.querySelectorAll('.content-section').forEach(s => s.classList.remove('active'));
                    document.querySelector('.menu-itemlocal[data-section="manage-attendees"]').classList.add('active');
                    document.getElementById('manage-attendees').classList.add('active');
                }

                // Delete attendee
                function deleteAttendee(id = null) {
                    const deleteId = id || editingId;
                    if (!deleteId) return;

                    if (confirm('Are you sure you want to delete this attendee?')) {
                        attendees = attendees.filter(a => a.id !== deleteId);
                        assignments = assignments.filter(a => a.attendeeId !== deleteId);

                        saveData();
                        updateStats();
                        renderAttendeesTable();
                        renderAssignments();
                        resetForm();
                        showNotification('Attendee deleted successfully!');
                    }
                }

                // Reset form
                function resetForm() {
                    document.getElementById('attendeeForm').reset();
                    editingId = null;
                    document.getElementById('deleteBtn').style.display = 'none';
                }

                // Update statistics
                function updateStats() {
                    document.getElementById('totalAttendees').textContent = attendees.length;
                    document.getElementById('bulkUploads').textContent = bulkUploads;
                    document.getElementById('manualEdits').textContent = manualEdits;
                }

                // Save data to localStorage
                function saveData() {
                    localStorage.setItem('attendees', JSON.stringify(attendees));
                    localStorage.setItem('accessPoints', JSON.stringify(accessPoints));
                    localStorage.setItem('assignments', JSON.stringify(assignments));
                }

                // Show notification
                function showNotification(message, type = 'success') {
                    notificationText.textContent = message;
                    notification.className = 'notification';
                    notification.classList.add(type);
                    notification.classList.add('show');

                    setTimeout(() => {
                        notification.classList.remove('show');
                    }, 3000);
                }

                // Search functionality
                function handleSearch() {
                    searchTerm = document.getElementById('searchInput').value.toLowerCase();
                    currentPage = 1;
                    renderAttendeesTable();
                }

                function clearSearch() {
                    document.getElementById('searchInput').value = '';
                    searchTerm = '';
                    currentPage = 1;
                    renderAttendeesTable();
                }

                // Filter functionality
                function applyFilter(filter, value) {
                    activeFilters[filter] = value.toLowerCase();
                    currentPage = 1;
                    renderAttendeesTable();
                }

                function clearFilter(filter) {
                    activeFilters[filter] = '';
                    document.getElementById(`filter${filter.charAt(0).toUpperCase() + filter.slice(1)}`).value = '';
                    currentPage = 1;
                    renderAttendeesTable();
                }

                function clearFilters() {
                    activeFilters = {
                        id: '', name: '', email: '', phone: '', company: '', department: ''
                    };
                    document.getElementById('filterId').value = '';
                    document.getElementById('filterName').value = '';
                    document.getElementById('filterEmail').value = '';
                    document.getElementById('filterPhone').value = '';
                    document.getElementById('filterCompany').value = '';
                    document.getElementById('filterDepartment').value = '';
                    currentPage = 1;
                    renderAttendeesTable();
                }

                function filterAttendees() {
                    return attendees.filter(attendee => {
                        // Apply search term
                        if (searchTerm) {
                            const searchableText = Object.values(attendee).join(' ').toLowerCase();
                            if (!searchableText.includes(searchTerm)) return false;
                        }

                        // Apply filters
                        for (const [filter, value] of Object.entries(activeFilters)) {
                            if (value && !String(attendee[filter] || '').toLowerCase().includes(value)) {
                                return false;
                            }
                        }

                        return true;
                    });
                }

                // Pagination
                function paginateAttendees(attendeesList) {
                    const startIndex = (currentPage - 1) * attendeesPerPage;
                    return attendeesList.slice(startIndex, startIndex + attendeesPerPage);
                }

                function changePage(direction) {
                    const filteredAttendees = filterAttendees();
                    const totalPages = Math.ceil(filteredAttendees.length / attendeesPerPage);

                    currentPage += direction;
                    if (currentPage < 1) currentPage = 1;
                    if (currentPage > totalPages) currentPage = totalPages;

                    renderAttendeesTable();
                }

                // Export to Excel
                function exportToExcel() {
                    const data = attendees.map(attendee => ({
                        ID: attendee.id,
                        'First Name': attendee.firstName,
                        'Last Name': attendee.lastName,
                        Email: attendee.email,
                        Phone: attendee.phone,
                        Company: attendee.company,
                        Department: attendee.department,
                        Notes: attendee.notes
                    }));

                    const ws = XLSX.utils.json_to_sheet(data);
                    const wb = XLSX.utils.book_new();
                    XLSX.utils.book_append_sheet(wb, ws, 'Attendees');
                    XLSX.writeFile(wb, 'attendees_export.xlsx');
                }

                // Assignment functionality
                function assignAccessPoint() {
                    if (!selectedAttendee || !selectedAccessPoint) {
                        showNotification('Please select both an attendee and an access point', 'warning');
                        return;
                    }

                    // Check if assignment already exists
                    const existingAssignment = assignments.find(a =>
                        a.attendeeId === selectedAttendee && a.accessPointId === selectedAccessPoint);

                    if (existingAssignment) {
                        showNotification('This assignment already exists', 'warning');
                        return;
                    }

                    const newAssignment = {
                        id: 'ASG-' + String(assignments.length + 1).padStart(3, '0'),
                        attendeeId: selectedAttendee,
                        accessPointId: selectedAccessPoint,
                        assignedDate: new Date().toLocaleDateString()
                    };

                    assignments.push(newAssignment);
                    saveData();
                    renderAssignments();
                    showNotification('Access point assigned successfully!');

                    // Clear selection
                    selectedAttendee = null;
                    selectedAccessPoint = null;
                    updateAssignmentUI();
                }

                function unassignAccessPoint() {
                    // Implementation for unassigning would go here
                    showNotification('Unassign functionality would be implemented here', 'warning');
                }

                function updateAssignmentUI() {
                    // Implementation for updating assignment UI would go here
                }
    </script>
 