                    <h3 id="manualEdits">0</h3>
                    <p>Manual Edits</p>
                </div>
            </div>
        </div>

        <div class="menu-bar">
            <div class="menu-itemlocal active" data-section="manage-attendees">Manage Attendees</div>
            <div class="menu-itemlocal" data-section="create-access-point" style="display:none">Create Access Point</div>
            <div class="menu-itemlocal" data-section="assign-to-attendees" style="display:none">>Assign to Attendees</div>
            <div class="menu-itemlocal" data-section="attendees-list">Attendees List</div>
        </div>

        <!-- Manage Attendees Section -->
        <div class="content-section active" id="manage-attendees">
            <div class="action-bar">
                <h2 class="section-title"><i class="fas fa-user-edit"></i> Manage Attendees</h2>
                <div>
                    <button class="btn btn-primary" id="bulkUploadBtn">
                        <i class="fas fa-file-upload"></i> Bulk Upload
                    </button>
                </div>
            </div>

            <p>Add or edit individual attendees using the form below, or use bulk upload for multiple attendees.</p>

            <form id="attendeeForm">
                <div class="form-row">
                    <div class="form-col">
                        <label for="firstName">First Name *</label>
                        <input type="text" id="firstName" required>
                    </div>
                    <div class="form-col">
                        <label for="lastName">Last Name *</label>
                        <input type="text" id="lastName" required>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-col">
                        <label for="email">Email Address *</label>
                        <input type="email" id="email" required>
                    </div>
                    <div class="form-col">
                        <label for="phone">Phone Number</label>
                        <input type="tel" id="phone">
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-col">
                        <label for="company">Company</label>
                        <input type="text" id="company">
                    </div>
                    <div class="form-col">
                        <label for="department">Department</label>
                        <input type="text" id="department">
                    </div>
                </div>

                <div class="form-group">
                    <label for="notes">Additional Notes</label>
                    <textarea id="notes" rows="2"></textarea>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary" id="saveBtn">
                        <i class="fas fa-save"></i> Save Attendee
                    </button>
                    <button type="button" class="btn btn-secondary" id="cancelBtn">
                        <i class="fas fa-times"></i> Cancel
                    </button>
                    <button type="button" class="btn btn-danger" id="deleteBtn" style="display: none;">
                        <i class="fas fa-trash"></i> Delete Attendee
                    </button>
                </div>
            </form>
        </div>

        <!-- Create Access Point Section -->
        <div class="content-section" id="create-access-point">
            <h2 class="section-title"><i class="fas fa-plus-circle"></i> Create Access Point</h2>
            <p>Create new access points for your event venues.</p>

            <form id="accessPointForm">
                <div class="form-row">
                    <div class="form-col">
                        <label for="accessPointName">Access Point Name *</label>
                        <input type="text" id="accessPointName" required placeholder="e.g., Main Entrance">
                    </div>
                    <div class="form-col">
                        <label for="accessPointLocation">Location *</label>
                        <input type="text" id="accessPointLocation" required placeholder="e.g., Building A, Floor 1">
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-col">
                        <label for="accessPointType">Access Point Type</label>
                        <select id="accessPointType">
                            <option value="entrance">Entrance</option>
                            <option value="exit">Exit</option>
                            <option value="checkpoint">Checkpoint</option>
                            <option value="restricted">Restricted Area</option>
                        </select>
                    </div>
                    <div class="form-col">
                        <label for="accessPointStatus">Status</label>
                        <select id="accessPointStatus">
                            <option value="active">Active</option>
                            <option value="inactive">Inactive</option>
                        </select>
                    </div>
                </div>

                <div class="form-group">
                    <label for="accessPointDescription">Description</label>
                    <textarea id="accessPointDescription" rows="3" placeholder="Describe this access point..."></textarea>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Create Access Point
                    </button>
                    <button type="reset" class="btn btn-secondary">
                        <i class="fas fa-times"></i> Reset
                    </button>
                </div>
            </form>

            <div class="access-points-grid" id="existingAccessPoints">
                <!-- Existing access points will be displayed here -->
            </div>
        </div>

        <!-- Assign to Attendees Section -->
        <div class="content-section" id="assign-to-attendees">
            <h2 class="section-title"><i class="fas fa-link"></i> Assign Access Points to Attendees</h2>
            <p>Select attendees and assign them to access points.</p>

            <div class="assign-container">
                <div class="assign-column">
                    <div class="assign-column-header">Available Attendees</div>
                    <div id="attendeesSelectionList">
                        <!-- Attendees will be listed here -->
                    </div>
                </div>

                <div class="assign-actions">
                    <button class="btn btn-primary" id="assignBtn">
                        <i class="fas fa-arrow-right"></i> Assign
                    </button>
                    <button class="btn btn-secondary" id="unassignBtn">
                        <i class="fas fa-arrow-left"></i> Unassign
                    </button>
                </div>

                <div class="assign-column">
                    <div class="assign-column-header">Access Points</div>
                    <div id="accessPointsSelectionList">
                        <!-- Access points will be listed here -->
                    </div>
                </div>
            </div>

            <div class="assignments-table">
                <h3 class="section-title"><i class="fas fa-list-check"></i> Current Assignments</h3>
                <div class="table-container">
                    <table id="assignmentsTable">
                        <thead>
                            <tr>
                                <th>Attendee Name</th>
                                <th>Access Point</th>
                                <th>Location</th>
                                <th>Assigned Date</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <!-- Assignments will be displayed here -->
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

