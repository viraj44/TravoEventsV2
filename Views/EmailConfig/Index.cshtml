        // Update test email preview
        function updateTestPreview() {
            const templateId = document.getElementById('testTemplate').value;
            const template = templates[templateId];
            
            if (template) {
                // Replace variables with sample data
                let content = template.content
                    .replace(/{name}/g, 'John Doe')
                    .replace(/{email}/g, 'john.doe@example.com')
                    .replace(/{group}/g, 'Group A')
                    .replace(/{date}/g, new Date().toLocaleDateString())
                    .replace(/{reset_link}/g, '#');
                
                document.getElementById('testPreview').innerHTML = `
                    <div style="margin-bottom: 15px; font-weight: bold;">Subject: ${template.subject}</div>
                    <div>${content}</div>
                `;
