        // Send test email
        function sendTestEmail() {
            const recipient = document.getElementById('testRecipient').value;
            const templateId = document.getElementById('testTemplate').value;
            
            if (!recipient) {
                showAlert('Please enter a recipient email address', 'error');
                return;
            }
            
            if (!validateEmail(recipient)) {
                showAlert('Please enter a valid email address', 'error');
                return;
            }
            
            // Show sending status
            const testStatus = document.getElementById('testStatus');
            testStatus.style.display = 'flex';
            
            // Simulate sending email
            setTimeout(() => {
                testStatus.style.display = 'none';
                showAlert(`Test email sent successfully to ${recipient}!`, 'success');
            }, 2000);
        }

        // Clear test form
        function clearTestForm() {
            document.getElementById('testRecipient').value = '';
            document.getElementById('testTemplate').value = 'welcome';
            updateTestPreview();
        }

        // Show alert message
        function showAlert(message, type) {
            const alertBox = document.getElementById('alertBox');
            alertBox.textContent = message;
            alertBox.className = `alert ${type} active`;
            setTimeout(() => {
                alertBox.classList.remove('active');
            }, 4000);
        }

        // Validate email format
        function validateEmail(email) {
            const re = /^[^\s]+[^\s]+\.[^\s]+$/;
            return re.test(email);
        }

        // Initialize the application when the page loads
        window.onload = init;
    </script>