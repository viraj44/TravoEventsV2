<script type="text/javascript">
        // Default templates
        const templates = {
            welcome: {
                subject: "Welcome to Our Platform",
                content: `<p>Hello {name},</p>
                <p>Welcome to our platform! We're excited to have you on board.</p>
                <p>Your account has been successfully created with the email: {email}</p>
                <p>If you have any questions, feel free to contact our support team.</p>
                <p>Best regards,<br>The Team</p>`
            },
            notification: {
                subject: "Important Notification",
                content: `<p>Hello {name},</p>
                <p>This is an important notification from our system.</p>
                <p>Please review the information and take any necessary action.</p>
                <p>If you have any questions, don't hesitate to contact us.</p>
                <p>Best regards,<br>The Team</p>`
            },
            password: {
                subject: "Password Reset Request",
                content: `<p>Hello {name},</p>
                <p>We received a request to reset your password.</p>
                <p>If you didn't make this request, please ignore this email.</p>
                <p>Otherwise, click the link below to reset your password:</p>
                <p><a href="{reset_link}">Reset Password</a></p>
                <p>Best regards,<br>The Team</p>`
            },
            group: {
                subject: "You've Been Assigned to a Group",
                content: `<p>Hello {name},</p>
                <p>You have been assigned to the following group: <strong>{group}</strong></p>
                <p>This assignment was made on: {date}</p>
                <p>If you believe this is an error, please contact your administrator.</p>
                <p>Best regards,<br>The Team</p>`
            }
        };

        let currentTemplate = 'welcome';
        let smtpEnabled = false;

        // Initialize the application
        function init() {
            // Load saved settings if available
            loadSavedSettings();
            // Set up event listeners
            setupEventListeners();
            // Update template preview
            updateTemplatePreview();
        }

        // Set up event listeners
        function setupEventListeners() {
            // Template content changes
            document.getElementById('templateSubject').addEventListener('input', updateTemplatePreview);
            document.getElementById('templateContent').addEventListener('input', updateTemplatePreview);
            
            // Test template selection
            document.getElementById('testTemplate').addEventListener('change', updateTestPreview);
        }

        // Load saved settings from localStorage
        function loadSavedSettings() {
            const savedSmtp = localStorage.getItem('emailSmtpSettings');
            if (savedSmtp) {
                const smtpSettings = JSON.parse(savedSmtp);
                document.getElementById('enableSmtp').checked = smtpSettings.enabled || false;
                document.getElementById('smtpHost').value = smtpSettings.host || '';
                document.getElementById('smtpPort').value = smtpSettings.port || '587';
                document.getElementById('smtpUsername').value = smtpSettings.username || '';
                document.getElementById('fromName').value = smtpSettings.fromName || '';
                document.getElementById('fromEmail').value = smtpSettings.fromEmail || '';
                document.getElementById('enableTls').checked = smtpSettings.tls !== false;
                
                smtpEnabled = smtpSettings.enabled || false;
                toggleSmtpSettings();
                
                if (smtpSettings.enabled) {
                    updateSmtpStatus('connected');
                }
            }

            // Load saved templates
            const savedTemplates = localStorage.getItem('emailTemplates');
            if (savedTemplates) {
                Object.assign(templates, JSON.parse(savedTemplates));
            }
        }

        // Switch between tabs
        function switchTab(tabName) {
            // Hide all tab contents
            document.querySelectorAll('.tab-content').forEach(tab => {
                tab.classList.remove('active');
            });
            
            // Remove active class from all tabs
            document.querySelectorAll('.tab').forEach(tab => {
                tab.classList.remove('active');
            });
            
            // Show selected tab content
            document.getElementById(`${tabName}-tab`).classList.add('active');
            
            // Add active class to selected tab
            event.target.classList.add('active');
            
            // Update previews when switching to templates or test tabs
            if (tabName === 'templates') {
                updateTemplatePreview();
            } else if (tabName === 'test') {
                updateTestPreview();
            }
        }

        // Toggle SMTP settings visibility
        function toggleSmtpSettings() {
            smtpEnabled = document.getElementById('enableSmtp').checked;
            const smtpSettings = document.getElementById('smtpSettings');
            
            if (smtpEnabled) {
                smtpSettings.style.display = 'block';
                updateSmtpStatus('disconnected');
            } else {
                smtpSettings.style.display = 'none';
                updateSmtpStatus('disconnected');
            }
        }

        // Update SMTP status indicator
        function updateSmtpStatus(status) {
            const statusElement = document.getElementById('smtpStatus');
            statusElement.className = 'status-indicator';
            
            switch(status) {
                case 'connected':
                    statusElement.classList.add('status-connected');
                    statusElement.innerHTML = '<span class="status-dot"></span><span>Connected</span>';
                    break;
                case 'disconnected':
                    statusElement.classList.add('status-disconnected');
                    statusElement.innerHTML = '<span class="status-dot"></span><span>Disconnected</span>';
                    break;
                case 'testing':
                    statusElement.classList.add('status-testing');
                    statusElement.innerHTML = '<span class="status-dot"></span><span>Testing Connection...</span>';
                    break;
            }
        }

        // Test SMTP connection
        function testSmtpConnection() {
            const host = document.getElementById('smtpHost').value;
            const port = document.getElementById('smtpPort').value;
            const username = document.getElementById('smtpUsername').value;
            
            if (!host || !port || !username) {
                showAlert('Please fill in all required SMTP settings', 'error');
                return;
            }
            
            updateSmtpStatus('testing');
            
            // Simulate connection test
            setTimeout(() => {
                // In a real application, this would make an API call to test the connection
                const success = Math.random() > 0.3; // 70% success rate for demo
                
                if (success) {
                    updateSmtpStatus('connected');
                    showAlert('SMTP connection test successful!', 'success');
                } else {
                    updateSmtpStatus('disconnected');
                    showAlert('SMTP connection test failed. Please check your settings.', 'error');
                }
            }, 2000);
        }

        // Save SMTP settings
        function saveSmtpSettings() {
            const smtpSettings = {
                enabled: document.getElementById('enableSmtp').checked,
                host: document.getElementById('smtpHost').value,
                port: document.getElementById('smtpPort').value,
                username: document.getElementById('smtpUsername').value,
                fromName: document.getElementById('fromName').value,
                fromEmail: document.getElementById('fromEmail').value,
                tls: document.getElementById('enableTls').checked
            };
            
            // In a real application, this would save to a server
            localStorage.setItem('emailSmtpSettings', JSON.stringify(smtpSettings));
            showAlert('SMTP settings saved successfully!', 'success');
        }

        // Select email template
        function selectTemplate(templateId) {
            currentTemplate = templateId;
            
            // Update template list active state
            document.querySelectorAll('.template-item').forEach(item => {
                item.classList.remove('active');
            });
            event.target.closest('.template-item').classList.add('active');
            
            // Load template data
            document.getElementById('templateSubject').value = templates[templateId].subject;
            document.getElementById('templateContent').value = templates[templateId].content;
            
            // Update preview
            updateTemplatePreview();
        }

        // Create new template
        function createNewTemplate() {
            const templateName = prompt('Enter a name for the new template:');
            if (templateName) {
                const templateId = templateName.toLowerCase().replace(/\s+/g, '_');
                
                templates[templateId] = {
                    subject: 'New Template',
                    content: '<p>Hello {name},</p><p>This is a new email template.</p>'
                };
                
                // Add to template list
                const templateList = document.querySelector('.template-list');
                const newTemplate = document.createElement('div');
                newTemplate.className = 'template-item';
                newTemplate.onclick = () => selectTemplate(templateId);
                newTemplate.innerHTML = `
                    <div class="template-item-header">
                        <div class="template-item-title">${templateName}</div>
                        <span>✅</span>
                    </div>
                    <div class="template-item-desc">
                        Custom email template.
                    </div>
                `;
                templateList.appendChild(newTemplate);
                
                // Select the new template
                selectTemplate(templateId);
                showAlert(`Template "${templateName}" created successfully!`, 'success');
            }
        }

        // Update template preview
        function updateTemplatePreview() {
            const subject = document.getElementById('templateSubject').value;
            const content = document.getElementById('templateContent').value;
            
            document.getElementById('templatePreview').innerHTML = `
                <div style="margin-bottom: 15px; font-weight: bold;">Subject: ${subject || 'No subject'}</div>
                <div>${content || 'No content'}</div>
            `;
        }

        // Refresh preview
        function refreshPreview() {
            updateTemplatePreview();
            showAlert('Preview updated', 'success');
        }

        // Save template
        function saveTemplate() {
            const subject = document.getElementById('templateSubject').value;
            const content = document.getElementById('templateContent').value;
            
            if (!subject || !content) {
                showAlert('Please fill in both subject and content', 'error');
                return;
            }
            
            templates[currentTemplate] = {
                subject: subject,
                content: content
            };
            
            // In a real application, this would save to a server
            localStorage.setItem('emailTemplates', JSON.stringify(templates));
            showAlert('Template saved successfully!', 'success');
        }

