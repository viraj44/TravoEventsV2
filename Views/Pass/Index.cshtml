<script>
    // Generate QR codes
    document.addEventListener('DOMContentLoaded', function() {
        // VIP pass QR code
        new QRCode(document.getElementById("qrcode1"), {
            text: "TIS23-6105|Michael Chen|VIP Group A|VIP|ACCESS:Main Entrance,VIP Lounge,Networking Hall,Exhibition Area,Speaker Sessions,After Party",
            width: 180,
            height: 180,
            colorDark: "#2D3748",
            colorLight: "#ffffff",
            correctLevel: QRCode.CorrectLevel.H
        });

        // Platinum pass QR code
        new QRCode(document.getElementById("qrcode2"), {
            text: "DMC23-7821|Sarah Rodriguez|Platinum Group B|Platinum|ACCESS:Main Entrance,Platinum Lounge,Workshop Rooms,Exhibition Hall",
            width: 180,
            height: 180,
            colorDark: "#2D3748",
            colorLight: "#ffffff",
            correctLevel: QRCode.CorrectLevel.H
        });
    });

    // Save to wallet function
    function saveToWallet() {
        alert("This pass would be added to your digital wallet. In a real application, this would use the Web App Manifest or similar technology.");
    }

    // Print pass function
    function printPass() {
        window.print();
    }

    // Share pass function
    function sharePass() {
        if (navigator.share) {
            navigator.share({
                title: 'My Event Pass - Digital Marketing Conference',
                text: 'Check out my event pass for the Digital Marketing Conference',
                url: window.location.href,
            })
            .then(() => console.log('Successful share'))
            .catch((error) => console.log('Error sharing', error));
        } else {
            alert("Web Share API not supported in your browser. You can copy the URL to share.");
        }
    }

    // Add some interactive features
    document.querySelectorAll('.pass-card').forEach(card => {
        card.addEventListener('click', function() {
            this.classList.toggle('expanded');
        });
    });
</script>