        --primary: #6C63FF;
        --primary-light: #8A85FF;
        --primary-dark: #5752CC;
        --secondary: #FF6584;
        --accent: #36D1DC;
        --vip: #FF9A00;
        --platinum: #E0E0E0;
        --gold: #FFD700;
        --silver: #C0C0C0;
        --light: #f8f9fa;
        --dark: #2D3748;
        --gray: #718096;
        --success: #48BB78;
        --warning: #ED8936;
        --radius: 16px;
        --shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        --gradient: linear-gradient(135deg, #6C63FF 0%, #36D1DC 100%);
        --vip-gradient: linear-gradient(135deg, #FF9A00 0%, #FF6A00 100%);
        --platinum-gradient: linear-gradient(135deg, #E0E0E0 0%, #B8B8B8 100%);
    }

    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: 'Segoe UI', system-ui, -apple-system, sans-serif;
    }

    /* body {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: var(--dark);
