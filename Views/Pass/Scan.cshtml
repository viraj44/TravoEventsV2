    <script>
        // Sample attendee data
        const sampleAttendees = {
            'A-001': { firstName: 'John', lastName: 'Smith', email: 'john.smith@example.com', company: 'Tech Corp' },
            'A-002': { firstName: 'Sarah', lastName: 'Johnson', email: 'sarah.j@example.com', company: 'Innovate Ltd' },
            'A-003': { firstName: 'Michael', lastName: 'Brown', email: 'm.brown@example.com', company: 'Global Solutions' },
            'A-004': { firstName: 'Emily', lastName: 'Davis', email: 'emily.davis@example.com', company: 'Creative Minds' },
            'A-005': { firstName: 'David', lastName: 'Wilson', email: 'd.wilson@example.com', company: 'Future Tech' },
            'A-006': { firstName: 'Lisa', lastName: 'Anderson', email: 'l.anderson@example.com', company: 'Data Systems' }
        };

        // Access points configuration
        const accessPoints = {
            'Main Entrance': { icon: 'fa-door-open', color: '#FFC107', isFood: false },
            'Food Counter': { icon: 'fa-utensils', color: '#E91E63', isFood: true },
            'Session Hall A': { icon: 'fa-chalkboard', color: '#4CAF50', isFood: false },
            'Session Hall B': { icon: 'fa-chalkboard', color: '#4CAF50', isFood: false },
            'Networking Lounge': { icon: 'fa-users', color: '#9C27B0', isFood: false },
            'Registration Desk': { icon: 'fa-clipboard-list', color: '#FF9800', isFood: false },
            'Exhibition Area': { icon: 'fa-store', color: '#795548', isFood: false },
            'VIP Lounge': { icon: 'fa-crown', color: '#FFD700', isFood: false }
        };

        // DOM Elements
        const video = document.getElementById('video');
        const cameraPlaceholder = document.getElementById('cameraPlaceholder');
        const accessPointDropdown = document.getElementById('accessPointDropdown');
        const selectedAccessPoint = document.getElementById('selectedAccessPoint');
        const currentAccessPointText = document.getElementById('currentAccessPointText');
        const startScannerBtn = document.getElementById('startScanner');
        const stopScannerBtn = document.getElementById('stopScanner');
        const uploadQrBtn = document.getElementById('uploadQr');
        const testScanBtn = document.getElementById('testScan');
        const fileInput = document.getElementById('fileInput');
        const statusDot = document.getElementById('statusDot');
        const statusText = document.getElementById('statusText');
        const emptyState = document.getElementById('emptyState');
        const scanResult = document.getElementById('scanResult');
        const notification = document.getElementById('notification');
        const notificationText = document.getElementById('notificationText');
        const logsList = document.getElementById('logsList');
        const searchInput = document.getElementById('searchInput');
        const filterButtons = document.getElementById('filterButtons');

        // App state
        let stream = null;
        let scanHistory = JSON.parse(localStorage.getItem('scanHistory')) || [];
        let isScanning = false;
        let canvas = document.createElement('canvas');
        let ctx = canvas.getContext('2d');
        let currentFilter = 'all';
        let selectedAccessPointValue = '';

        // Initialize
        function init() {
            updateScanLogs();
            setupEventListeners();
            updateFilterButtons();
        }

        function setupEventListeners() {
            // Access point dropdown change
            accessPointDropdown.addEventListener('change', function() {
                selectedAccessPointValue = this.value;
                if (selectedAccessPointValue) {
                    selectedAccessPoint.style.display = 'flex';
                    currentAccessPointText.textContent = selectedAccessPointValue;
                    startScannerBtn.disabled = false;
                    uploadQrBtn.disabled = false;
                    testScanBtn.disabled = false;
                    updateStatus('ready', `Ready to scan at ${selectedAccessPointValue}`);
                    cameraPlaceholder.innerHTML = `
                        <i class="fas fa-camera"></i>
                        <p>Camera Ready</p>
                        <p style="font-size: 0.8rem; margin-top: 4px;">Scanning for: ${selectedAccessPointValue}</p>
                    `;
                } else {
                    selectedAccessPoint.style.display = 'none';
                    startScannerBtn.disabled = true;
                    uploadQrBtn.disabled = true;
                    testScanBtn.disabled = true;
                    updateStatus('info', 'Select access point to begin');
                    cameraPlaceholder.innerHTML = `
                        <i class="fas fa-camera"></i>
                        <p>Select access point to start</p>
                    `;
                }
            });

            startScannerBtn.addEventListener('click', startScanner);
            stopScannerBtn.addEventListener('click', stopScanner);
            uploadQrBtn.addEventListener('click', () => fileInput.click());
            testScanBtn.addEventListener('click', showTestScan);
            fileInput.addEventListener('change', handleFileUpload);
            searchInput.addEventListener('input', updateScanLogs);

            // Filter buttons
            filterButtons.addEventListener('click', (e) => {
                if (e.target.classList.contains('filter-btn')) {
                    document.querySelectorAll('.filter-btn').forEach(btn => {
                        btn.classList.remove('active');
                    });
                    e.target.classList.add('active');
                    currentFilter = e.target.dataset.filter;
                    updateScanLogs();
                }
            });

            video.addEventListener('loadeddata', function() {
                showCameraPlaceholder(false);
            });
        }

        function updateFilterButtons() {
            // Get unique access points from history
            const uniqueAccessPoints = [...new Set(scanHistory.map(scan => scan.accessPoint))];

            // Clear existing buttons (except "All")
            const allBtn = filterButtons.querySelector('[data-filter="all"]');
            filterButtons.innerHTML = '';
            filterButtons.appendChild(allBtn);

            // Add buttons for each unique access point
            uniqueAccessPoints.forEach(point => {
                if (point) {
                    const btn = document.createElement('button');
                    btn.className = 'filter-btn';
                    btn.dataset.filter = point;
                    btn.textContent = point;
                    filterButtons.appendChild(btn);
                }
            });
        }

        function checkDuplicateFoodScan(attendeeId, currentAccessPoint) {
            if (!accessPoints[currentAccessPoint]?.isFood) {
                return null; // Not a food counter, no duplicate check needed
            }

            const previousFoodScans = scanHistory.filter(scan =>
                scan.id === attendeeId &&
                accessPoints[scan.accessPoint]?.isFood
            );

            if (previousFoodScans.length > 0) {
                return previousFoodScans[0]; // Return the first food scan
            }

            return null; // No duplicate found
        }

        async function startScanner() {
            if (!selectedAccessPointValue) {
                showNotification('Please select an access point first', 'error');
                return;
            }

            try {
                updateStatus('scanning', `Scanning at ${selectedAccessPointValue}...`);

                const constraints = {
                    video: { facingMode: "environment" }
                };

                stream = await navigator.mediaDevices.getUserMedia(constraints);
                video.srcObject = stream;
                showCameraPlaceholder(false);

                video.onloadedmetadata = function() {
                    video.play().then(() => {
                        startScannerBtn.disabled = true;
                        stopScannerBtn.disabled = false;
                        uploadQrBtn.disabled = true;
                        testScanBtn.disabled = true;
                        accessPointDropdown.disabled = true;
                        updateStatus('scanning', `Scanning at ${selectedAccessPointValue}...`);
                        isScanning = true;
                        scanFrame();
                        showNotification(`Scanner started for ${selectedAccessPointValue}`);
                    });
                };

            } catch (err) {
                showNotification('Camera access denied', 'error');
                updateStatus('error', 'Camera Error');
            }
        }

        function stopScanner() {
            isScanning = false;

            if (stream) {
                stream.getTracks().forEach(track => track.stop());
                stream = null;
            }

            video.srcObject = null;
            startScannerBtn.disabled = false;
            stopScannerBtn.disabled = true;
            uploadQrBtn.disabled = false;
            testScanBtn.disabled = false;
            accessPointDropdown.disabled = false;
            updateStatus('ready', `Ready to scan at ${selectedAccessPointValue}`);
            showCameraPlaceholder(true);
        }

        function showCameraPlaceholder(show) {
            cameraPlaceholder.style.display = show ? 'flex' : 'none';
            video.style.display = show ? 'none' : 'block';
        }

        function scanFrame() {
            if (!isScanning) return;

            if (video.readyState === video.HAVE_ENOUGH_DATA) {
                canvas.width = video.videoWidth;
                canvas.height = video.videoHeight;
                ctx.drawImage(video, 0, 0, canvas.width, canvas.height);

                const imageData = ctx.getImageData(0, 0, canvas.width, canvas.height);
                const code = jsQR(imageData.data, imageData.width, imageData.height);

                if (code) {
                    handleQRScan(code.data);
                }
            }

            requestAnimationFrame(scanFrame);
        }

        function handleFileUpload(event) {
            if (!selectedAccessPointValue) {
                showNotification('Please select an access point first', 'error');
                return;
            }

            const file = event.target.files[0];
            if (!file) return;

            const reader = new FileReader();
            reader.onload = function(e) {
                const img = new Image();
                img.onload = function() {
                    canvas.width = img.width;
                    canvas.height = img.height;
                    ctx.drawImage(img, 0, 0);

                    const imageData = ctx.getImageData(0, 0, canvas.width, canvas.height);
                    const code = jsQR(imageData.data, imageData.width, imageData.height);

                    if (code) {
                        handleQRScan(code.data);
                    } else {
                        showNotification('No QR code found', 'error');
                    }
                };
                img.src = e.target.result;
            };
            reader.readAsDataURL(file);
            event.target.value = '';
        }

        function handleQRScan(qrData) {
            try {
                const data = JSON.parse(qrData);
                const attendeeId = data.id;

                if (sampleAttendees[attendeeId]) {
                    const attendee = sampleAttendees[attendeeId];
                    const now = new Date();
                    const accessPoint = selectedAccessPointValue;

                    // Check for duplicate food counter scans
                    const duplicateScan = checkDuplicateFoodScan(attendeeId, accessPoint);

                    displayScanResult(attendee, attendeeId, now, accessPoint, duplicateScan);
                    addToScanHistory(attendee, attendeeId, now, accessPoint);
                    stopScanner();

                    if (duplicateScan) {
                        showNotification(`⚠️ Already collected food at ${duplicateScan.accessPoint} (${duplicateScan.time})`, 'warning');
                    } else {
                        showNotification(`Checked in at ${accessPoint}: ${attendee.firstName} ${attendee.lastName}`);
                    }
                } else {
                    showNotification('Invalid QR code', 'error');
                }
            } catch (error) {
                showNotification('Invalid QR code format', 'error');
            }
        }

        function displayScanResult(attendee, id, timestamp, accessPoint, duplicateScan) {
            emptyState.style.display = 'none';
            scanResult.style.display = 'block';

            const accessPointConfig = accessPoints[accessPoint] || accessPoints['Main Entrance'];
            const isDuplicateFoodScan = duplicateScan && accessPoints[accessPoint]?.isFood;

            let resultHTML = `
                <div class="result-card ${isDuplicateFoodScan ? 'duplicate' : ''}">
                    <div class="attendee-header">
                        <div class="attendee-name">${attendee.firstName} ${attendee.lastName}</div>
                        <div class="attendee-id">${id}</div>
                    </div>
                    <div class="info-row">
                        <span class="info-label">Email:</span>
                        <span class="info-value">${attendee.email}</span>
                    </div>
                    <div class="info-row">
                        <span class="info-label">Company:</span>
                        <span class="info-value">${attendee.company}</span>
                    </div>
                    <div class="info-row">
                        <span class="info-label">Access Point:</span>
                        <span class="access-point" style="background: ${accessPointConfig.color}">
                            <i class="fas ${accessPointConfig.icon}"></i> ${accessPoint}
                        </span>
                    </div>
            `;

            if (isDuplicateFoodScan) {
                resultHTML += `
                    <div class="duplicate-warning">
                        <i class="fas fa-exclamation-triangle"></i>
                        <div>
                            <strong>Already Collected Food</strong>
                            <div style="font-size: 0.8rem; margin-top: 2px;">
                                Previously scanned at ${duplicateScan.accessPoint} (${duplicateScan.time})
                            </div>
                        </div>
                    </div>
                `;
                updateStatus('warning', 'Duplicate Food Scan');
            } else if (accessPoints[accessPoint]?.isFood) {
                resultHTML += `
                    <div class="previous-scan">
                        <i class="fas fa-check-circle"></i>
                        Food served successfully
                    </div>
                `;
                updateStatus('success', 'Food Served');
            } else {
                updateStatus('success', 'Checked In');
            }

            resultHTML += `
                    <div class="scan-time">
                        Scanned at: ${timestamp.toLocaleTimeString('en-IN')}
                    </div>
                </div>
            `;

            scanResult.innerHTML = resultHTML;
        }

        function addToScanHistory(attendee, id, timestamp, accessPoint) {
            const scanRecord = {
                id: id,
                name: `${attendee.firstName} ${attendee.lastName}`,
                email: attendee.email,
                company: attendee.company,
                accessPoint: accessPoint,
                timestamp: timestamp.toISOString(),
                time: timestamp.toLocaleTimeString('en-IN', { hour: '2-digit', minute: '2-digit' }),
                date: timestamp.toLocaleDateString('en-IN'),
                isFood: accessPoints[accessPoint]?.isFood || false
            };

            scanHistory.unshift(scanRecord);
            if (scanHistory.length > 100) {
                scanHistory = scanHistory.slice(0, 100);
            }

            localStorage.setItem('scanHistory', JSON.stringify(scanHistory));
            updateScanLogs();
            updateFilterButtons();
        }

        function updateScanLogs() {
            const searchTerm = searchInput.value.toLowerCase();
            let filteredLogs = scanHistory;

            // Apply search filter
            if (searchTerm) {
                filteredLogs = scanHistory.filter(log =>
                    log.name.toLowerCase().includes(searchTerm) ||
                    log.email.toLowerCase().includes(searchTerm) ||
                    log.company.toLowerCase().includes(searchTerm) ||
                    log.id.toLowerCase().includes(searchTerm) ||
                    log.accessPoint.toLowerCase().includes(searchTerm)
                );
            }

            // Apply access point filter
            if (currentFilter !== 'all') {
                filteredLogs = filteredLogs.filter(log => log.accessPoint === currentFilter);
            }

            logsList.innerHTML = '';

            if (filteredLogs.length === 0) {
                logsList.innerHTML = `
                    <div class="empty-state">
                        <i class="fas fa-search"></i>
                        <p>No scans found</p>
                        ${searchTerm || currentFilter !== 'all' ?
                          '<p style="font-size: 0.8rem;">Try different search terms or filters</p>' :
                          '<p style="font-size: 0.8rem;">Scan QR codes to see logs</p>'}
                    </div>
                `;
                return;
            }

            filteredLogs.forEach(log => {
                const accessPointConfig = accessPoints[log.accessPoint] || accessPoints['Main Entrance'];
                const isFoodDuplicate = log.isFood && scanHistory.filter(s =>
                    s.id === log.id && s.isFood && s.timestamp < log.timestamp
                ).length > 0;

                const item = document.createElement('div');
                item.className = 'log-item';
                item.innerHTML = `
                    <div class="log-info">
                        <div class="log-name">${log.name}</div>
                        <div class="log-email">${log.email} • ${log.company}</div>
                        <div class="log-details">
                            <span class="access-badge" style="background: ${accessPointConfig.color}">
                                <i class="fas ${accessPointConfig.icon}"></i> ${log.accessPoint}
                            </span>
                            ${isFoodDuplicate ? '<span class="duplicate-badge"><i class="fas fa-utensils"></i> Food Collected</span>' : ''}
                            <span>ID: ${log.id}</span>
                        </div>
                    </div>
                    <div class="log-time">
                        <div class="log-time-main">${log.time}</div>
                        <div class="log-time-date">${log.date}</div>
                    </div>
                `;
                item.addEventListener('click', () => {
                    const attendee = sampleAttendees[log.id];
                    if (attendee) {
                        const duplicateScan = log.isFood ? checkDuplicateFoodScan(log.id, log.accessPoint) : null;
                        displayScanResult(attendee, log.id, new Date(log.timestamp), log.accessPoint, duplicateScan);
                    }
                });
                logsList.appendChild(item);
            });
        }

        function showTestScan() {
            if (!selectedAccessPointValue) {
                showNotification('Please select an access point first', 'error');
                return;
            }

            // Pick a random attendee for testing
            const ids = Object.keys(sampleAttendees);
            const randomId = ids[Math.floor(Math.random() * ids.length)];
            const attendee = sampleAttendees[randomId];
            const now = new Date();
            const accessPoint = selectedAccessPointValue;

            // Check for duplicate food counter scans
            const duplicateScan = checkDuplicateFoodScan(randomId, accessPoint);

            displayScanResult(attendee, randomId, now, accessPoint, duplicateScan);
            addToScanHistory(attendee, randomId, now, accessPoint);

            if (duplicateScan) {
                showNotification(`⚠️ Test: Already collected food at ${duplicateScan.accessPoint} (${duplicateScan.time})`, 'warning');
            } else {
                showNotification(`Test scan at ${accessPoint}: ${attendee.firstName} ${attendee.lastName}`);
            }
        }

        function updateStatus(type, text) {
            statusDot.className = 'status-dot ' + type;
            statusText.textContent = text;
        }

        function showNotification(message, type = 'success') {
            notificationText.textContent = message;
            notification.className = 'notification ' + type;
            notification.classList.add('show');

            setTimeout(() => {
                notification.classList.remove('show');
            }, type === 'warning' ? 5000 : 3000);
        }

        // Initialize app
        document.addEventListener('DOMContentLoaded', init);
    </script>
 