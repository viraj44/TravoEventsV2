            mobile: "+1 234 567 8902",
            group: "",
            accessPoint: "",
            source: "",
            isRSVP: "",
            paid: "Free",
            status: "locked",
            selected: false
        },
        {
            id: 4,
            name: "Priya Sharma",
            email: "priya@example.com",
            mobile: "+1 234 567 8903",
            group: "GroupB",
            accessPoint: "Access1,2",
            source: "Online",
            isRSVP: "Yes",
            paid: "Paid",
            status: "unlocked",
            selected: false
        },
        {
            id: 5,
            name: "Rahul Kumar",
            email: "rahul@example.com",
            mobile: "+1 234 567 8904",
            group: "VIP Group",
            accessPoint: "Access1,2,3,4",
            source: "Admin",
            isRSVP: "Yes",
            paid: "Paid",
            status: "locked",
            selected: false
        }
    ];

    let selectedAction = null;

    // Initialize the table
    function initializeTable() {
        const tableBody = document.getElementById('tableBody');
        tableBody.innerHTML = '';

        participants.forEach(participant => {
            const tr = document.createElement('tr');
            if (participant.status === 'locked') {
                tr.classList.add('locked');
            }
            if (participant.selected) {
                tr.classList.add('selected');
            }

            tr.innerHTML = `
                <td>
                    <div class="checkbox ${participant.selected ? 'checked' : ''}" onclick="toggleParticipantSelection(${participant.id})">
                        ${participant.selected ? '<i class="fas fa-check"></i>' : ''}
                    </div>
                </td>
                <td>${participant.name}</td>
                <td>${participant.email}</td>
                <td>${participant.mobile}</td>
                <td>${participant.group}</td>
                <td>${participant.accessPoint}</td>
                <td>${participant.source}</td>
                <td>${participant.isRSVP}</td>
                <td>${participant.paid}</td>
                <td>
                    <span class="status-badge ${participant.status === 'locked' ? 'status-locked' : 'status-unlocked'}">
                        ${participant.status === 'locked' ? 'Locked' : 'Unlocked'}
                    </span>
                </td>
                <td>
                    <div class="action-buttons">
                        ${participant.status === 'locked' ?
                            `<button class="action-btn btn-unlock" onclick="toggleLock(${participant.id})">
                                <i class="fas fa-unlock"></i> Unlock
                            </button>` :
                            `<button class="action-btn btn-lock" onclick="toggleLock(${participant.id})">
                                <i class="fas fa-lock"></i> Lock
                            </button>`
                        }
                        <button class="action-btn btn-view" onclick="viewPass(${participant.id})">
                            <i class="fas fa-id-card"></i> View Pass
                        </button>
                        <button class="action-btn btn-email" onclick="sendEmail(${participant.id})">
                            <i class="fas fa-envelope"></i> Email
                        </button>
                        <button class="action-btn btn-whatsapp" onclick="sendWhatsApp(${participant.id})">
                            <i class="fab fa-whatsapp"></i> WhatsApp
                        </button>
                    </div>
                </td>
            `;
            tableBody.appendChild(tr);
        });

        updateSelectedCount();
        updateBulkActionsPanel();
    }

    // Toggle participant selection
    function toggleParticipantSelection(id) {
        const participant = participants.find(p => p.id === id);
        if (participant) {
            participant.selected = !participant.selected;
            initializeTable();
        }
    }

    // Select all participants
    function selectAllParticipants() {
        const allSelected = participants.every(p => p.selected);
        participants.forEach(p => {
            p.selected = !allSelected;
        });
        initializeTable();
    }

    // Update selected count
    function updateSelectedCount() {
        const selectedCount = participants.filter(p => p.selected).length;
        document.getElementById('selectedCount').textContent = `${selectedCount} participants selected`;

        // Update select all checkbox
        const selectAllCheckbox = document.getElementById('selectAllCheckbox');
        if (selectedCount === participants.length) {
            selectAllCheckbox.classList.add('checked');
            selectAllCheckbox.innerHTML = '<i class="fas fa-check"></i>';
        } else {
            selectAllCheckbox.classList.remove('checked');
            selectAllCheckbox.innerHTML = '';
        }
    }

    // Update bulk actions panel visibility
    function updateBulkActionsPanel() {
        const selectedCount = participants.filter(p => p.selected).length;
        const bulkActions = document.getElementById('bulkActions');

        if (selectedCount > 0) {
            bulkActions.classList.add('active');
        } else {
            bulkActions.classList.remove('active');
            hideAllBulkForms();
        }
    }

    // Toggle lock/unlock status for individual participant
    function toggleLock(id) {
        const participant = participants.find(p => p.id === id);
        if (participant) {
            participant.status = participant.status === 'locked' ? 'unlocked' : 'locked';
            initializeTable();

            const action = participant.status === 'locked' ? 'locked' : 'unlocked';
            showAlert(`Participant ${participant.name} has been ${action}`, 'success');

            // Log the action
            console.log(`Participant ${participant.name} ${action} by Admin User at ${new Date().toLocaleString()}`);
        }
    }

    // Bulk lock/unlock
    function bulkLockUnlock(action) {
        const selectedParticipants = participants.filter(p => p.selected);

        if (selectedParticipants.length === 0) {
            showAlert('Please select at least one participant', 'error');
            return;
        }

        selectedParticipants.forEach(participant => {
            participant.status = action;
        });

        initializeTable();
        showAlert(`${selectedParticipants.length} participants ${action === 'locked' ? 'locked' : 'unlocked'}`, 'success');

        // Log the action
        console.log(`${selectedParticipants.length} participants ${action === 'locked' ? 'locked' : 'unlocked'} by Admin User at ${new Date().toLocaleString()}`);
    }

    // Show bulk email form
    function showBulkEmailForm() {
        hideAllBulkForms();
        document.getElementById('bulkEmailForm').classList.add('active');
    }

    // Show bulk WhatsApp form
    function showBulkWhatsAppForm() {
        hideAllBulkForms();
        document.getElementById('bulkWhatsAppForm').classList.add('active');
    }

    // Hide all bulk forms
    function hideAllBulkForms() {
        document.getElementById('bulkEmailForm').classList.remove('active');
        document.getElementById('bulkWhatsAppForm').classList.remove('active');
    }

    // Send bulk email
    function sendBulkEmail() {
        const subject = document.getElementById('bulkEmailSubject').value;
        const message = document.getElementById('bulkEmailMessage').value;
        const selectedParticipants = participants.filter(p => p.selected);

        if (selectedParticipants.length === 0) {
            showAlert('Please select at least one participant', 'error');
            return;
        }

        if (!subject || !message) {
            showAlert('Please enter both subject and message', 'error');
            return;
        }

        // Simulate sending email
        showAlert(`Email sent to ${selectedParticipants.length} participants`, 'success');
        document.getElementById('bulkEmailSubject').value = '';
        document.getElementById('bulkEmailMessage').value = '';
        hideAllBulkForms();

        // Log the action
        console.log(`Bulk email sent to ${selectedParticipants.length} participants by Admin User at ${new Date().toLocaleString()}`);
    }

    // Send bulk WhatsApp
    function sendBulkWhatsApp() {
        const message = document.getElementById('bulkWhatsAppMessage').value;
        const selectedParticipants = participants.filter(p => p.selected);

        if (selectedParticipants.length === 0) {
            showAlert('Please select at least one participant', 'error');
            return;
        }

        if (!message) {
            showAlert('Please enter a message', 'error');
            return;
        }

        // Simulate sending WhatsApp
        showAlert(`WhatsApp message sent to ${selectedParticipants.length} participants`, 'success');
        document.getElementById('bulkWhatsAppMessage').value = '';
        hideAllBulkForms();

        // Log the action
        console.log(`Bulk WhatsApp sent to ${selectedParticipants.length} participants by Admin User at ${new Date().toLocaleString()}`);
    }

    // View pass modal
    function viewPass(id) {
        const participant = participants.find(p => p.id === id);
        if (participant) {
            document.getElementById('passName').textContent = participant.name;
            document.getElementById('passEmail').textContent = participant.email;
            document.getElementById('passGroup').textContent = participant.group || 'General';
            document.getElementById('passPoints').textContent = participant.accessPoint || 'All Access Points';
            document.getElementById('passAccess').textContent = participant.group.includes('VIP') ? 'VIP' : 'Standard';
            document.getElementById('passId').textContent = `TC2023-${participant.name.substring(0,2).toUpperCase()}-${participant.id.toString().padStart(3, '0')}`;

            document.getElementById('viewPassModal').classList.add('active');
        }
    }

    function closeViewPassModal() {
        document.getElementById('viewPassModal').classList.remove('active');
    }

    // Alert function
    function showAlert(message, type) {
        const alertBox = document.getElementById('alertBox');
        alertBox.textContent = message;
        alertBox.className = `alert ${type} active`;
        setTimeout(() => {
            alertBox.classList.remove('active');
        }, 3000);
    }

    // Communication functions for individual participants
    function sendEmail(id) {
        const participant = participants.find(p => p.id === id);
        if (participant) {
            showAlert(`Email sent to ${participant.name} (${participant.email})`, 'success');
        }
    }

    function sendWhatsApp(id) {
        const participant = participants.find(p => p.id === id);
        if (participant) {
            showAlert(`WhatsApp message sent to ${participant.name}`, 'success');
        }
    }

    // Pass functions
    function printPass() {
        showAlert('Pass sent to printer', 'success');
    }

    function sendPassEmail() {
        showAlert('Pass sent via email', 'success');
    }

    // Search functionality
    document.getElementById('searchInput').addEventListener('input', function(e) {
        const searchTerm = e.target.value.toLowerCase();
        const rows = document.querySelectorAll('#tableBody tr');

        rows.forEach(row => {
            const text = row.textContent.toLowerCase();
            row.style.display = text.includes(searchTerm) ? '' : 'none';
        });
    });

    // Initialize the page
    document.addEventListener('DOMContentLoaded', function() {
        initializeTable();

        // Set up bulk action buttons
        document.querySelectorAll('.bulk-option').forEach(option => {
            option.addEventListener('click', function() {
                const action = this.getAttribute('data-action');

                // Remove active class from all options
                document.querySelectorAll('.bulk-option').forEach(opt => {
                    opt.classList.remove('active');
                });

                // Add active class to clicked option
                this.classList.add('active');

                // Handle different actions
                if (action === 'lock') {
                    bulkLockUnlock('locked');
                } else if (action === 'unlock') {
                    bulkLockUnlock('unlocked');
                } else if (action === 'email') {
                    showBulkEmailForm();
                } else if (action === 'whatsapp') {
                    showBulkWhatsAppForm();
                }
            });
        });

        // Close modals when clicking outside
        window.addEventListener('click', function(event) {
            const viewPassModal = document.getElementById('viewPassModal');

            if (event.target === viewPassModal) {
                closeViewPassModal();
            }
        });
    });
</script>