<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EventManagerMVC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EventManagerMVC.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/xlsx/0.18.5/xlsx.full.min.js"></script>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', sans-serif;
            background: #fafbfc;
            min-height: 100vh;
            font-size: 14px;
        }

        /* Modern Navbar */
        .navbar {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(20px);
            border-bottom: 1px solid rgba(229, 231, 235, 0.8);
            padding: 12px 24px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            position: sticky;
            top: 0;
            z-index: 1000;
            height: 64px;
        }

        .logo {
            display: flex;
            align-items: center;
            gap: 12px;
            font-size: 18px;
            font-weight: 700;
            color: #1f2937;
            text-decoration: none;
        }

        .logo-icon {
            width: 40px;
            height: 40px;
            background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
            border-radius: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 20px;
            color: white;
            transition: transform 0.2s ease;
        }

        .logo:hover .logo-icon {
            transform: scale(1.05);
        }

        .user-info {
            display: flex;
            align-items: center;
            gap: 12px;
            color: #6b7280;
            font-size: 14px;
            position: relative;
        }

        .user-dropdown {
            position: relative;
            cursor: pointer;
        }

        .user-avatar {
            width: 36px;
            height: 36px;
            background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-weight: 600;
            font-size: 14px;
            transition: all 0.2s ease;
        }

        .user-dropdown:hover .user-avatar {
            transform: scale(1.05);
            box-shadow: 0 4px 12px rgba(99, 102, 241, 0.3);
        }

        .dropdown-menu {
            position: absolute;
            top: 100%;
            right: 0;
            background: white;
            border: 1px solid #e5e7eb;
            border-radius: 12px;
            padding: 8px;
            min-width: 200px;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
            opacity: 0;
            visibility: hidden;
            transform: translateY(-10px);
            transition: all 0.2s ease;
            z-index: 1001;
        }

            .dropdown-menu.active {
                opacity: 1;
                visibility: visible;
                transform: translateY(5px);
            }

        .dropdown-item {
            display: flex;
            align-items: center;
            gap: 10px;
            padding: 10px 12px;
            color: #6b7280;
            text-decoration: none;
            border-radius: 8px;
            transition: all 0.15s ease;
            font-size: 14px;
        }

            .dropdown-item:hover {
                background: #f3f4f6;
                color: #374151;
            }

        .dropdown-divider {
            height: 1px;
            background: #f3f4f6;
            margin: 6px 0;
        }

        /* Modern Layout */
        .layout-wrapper {
            display: flex;
            min-height: calc(100vh - 64px);
        }

        /* Modern Sidebar */
        .sidebar {
            width: 280px;
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(20px);
            border-right: 1px solid rgba(229, 231, 235, 0.8);
            padding: 20px 16px;
            position: sticky;
            top: 64px;
            height: calc(100vh - 64px);
            overflow-y: auto;
            transition: transform 0.3s ease;
        }

        .menu-section {
            margin-bottom: 28px;
        }

        .menu-title {
            font-size: 12px;
            font-weight: 700;
            text-transform: uppercase;
            color: #9ca3af;
            letter-spacing: 0.5px;
            margin-bottom: 12px;
            padding: 0 12px;
        }

        .menu-item {
            display: flex;
            align-items: center;
            gap: 12px;
            padding: 12px 16px;
            color: #6b7280;
            cursor: pointer;
            border-radius: 10px;
            transition: all 0.2s ease;
            margin-bottom: 4px;
            font-size: 14px;
            font-weight: 500;
            text-decoration: none;
            position: relative;
            overflow: hidden;
        }

            .menu-item::before {
                content: '';
                position: absolute;
                left: 0;
                top: 0;
                height: 100%;
                width: 3px;
                background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
                transform: scaleY(0);
                transition: transform 0.2s ease;
            }

            .menu-item:hover {
                background: rgba(99, 102, 241, 0.05);
                color: #6366f1;
                transform: translateX(4px);
            }

            .menu-item.active {
                background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
                color: white;
                box-shadow: 0 4px 12px rgba(99, 102, 241, 0.3);
            }

                .menu-item.active::before {
                    transform: scaleY(1);
                }

        .menu-icon {
            font-size: 16px;
            width: 20px;
            text-align: center;
            transition: transform 0.2s ease;
        }

        .menu-item:hover .menu-icon {
            transform: scale(1.1);
        }

        .menu-badge {
            margin-left: auto;
            background: rgba(255, 255, 255, 0.2);
            color: inherit;
            padding: 4px 10px;
            border-radius: 12px;
            font-size: 11px;
            font-weight: 700;
            min-width: 24px;
            text-align: center;
            opacity: 0.9;
        }

        .menu-item:not(.active) .menu-badge {
            background: #f3f4f6;
            color: #6b7280;
        }

        /* Quick Actions */
        .quick-actions {
            background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%);
            border-radius: 12px;
            padding: 16px;
            margin: 20px 0;
            border: 1px solid #e2e8f0;
        }

        .quick-actions-title {
            font-size: 13px;
            font-weight: 600;
            color: #475569;
            margin-bottom: 12px;
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .action-buttons {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 8px;
        }

        .action-btn {
            background: white;
            border: 1px solid #e2e8f0;
            padding: 10px 12px;
            border-radius: 8px;
            font-size: 12px;
            font-weight: 500;
            color: #475569;
            cursor: pointer;
            transition: all 0.2s ease;
            display: flex;
            align-items: center;
            gap: 6px;
            text-decoration: none;
        }

            .action-btn:hover {
                background: #6366f1;
                color: white;
                border-color: #6366f1;
                transform: translateY(-1px);
                box-shadow: 0 4px 8px rgba(99, 102, 241, 0.3);
            }

        /* Mobile Menu Toggle */
        .mobile-menu-toggle {
            display: none;
            background: none;
            border: none;
            font-size: 20px;
            color: #6b7280;
            cursor: pointer;
            padding: 8px;
            border-radius: 8px;
            transition: all 0.2s ease;
        }

            .mobile-menu-toggle:hover {
                background: #f3f4f6;
                color: #374151;
            }

        /* Main Content */
        .main-content {
            flex: 1;
            padding: 24px;
            overflow-y: auto;
            max-width: 1400px;
            background: #f8fafc;
        }

        /* Breadcrumb */
        .breadcrumb {
            display: flex;
            align-items: center;
            gap: 8px;
            margin-bottom: 20px;
            font-size: 14px;
            color: #6b7280;
        }

        .breadcrumb-item {
            display: flex;
            align-items: center;
            gap: 8px;
        }

            .breadcrumb-item:not(:last-child)::after {
                content: '/';
                color: #d1d5db;
            }

            .breadcrumb-item.active {
                color: #6366f1;
                font-weight: 600;
            }

        /* Page Header */
        .page-header {
            margin-bottom: 24px;
        }

            .page-header h1 {
                font-size: 28px;
                color: #111827;
                margin-bottom: 6px;
                font-weight: 800;
                background: linear-gradient(135deg, #111827 0%, #374151 100%);
                -webkit-background-clip: text;
                -webkit-text-fill-color: transparent;
            }

            .page-header p {
                color: #6b7280;
                font-size: 14px;
                line-height: 1.5;
            }

        /* Responsive Design */
        @@media (max-width: 1024px) {
            .sidebar

        {
            width: 240px;
        }

        }

        @@media (max-width: 768px) {
            .mobile-menu-toggle

        {
            display: block;
        }

        .sidebar {
            position: fixed;
            left: 0;
            top: 64px;
            height: calc(100vh - 64px);
            transform: translateX(-100%);
            z-index: 999;
            width: 280px;
            box-shadow: 4px 0 20px rgba(0, 0, 0, 0.1);
        }

            .sidebar.active {
                transform: translateX(0);
            }

        .overlay {
            display: none;
            position: fixed;
            top: 64px;
            left: 0;
            width: 100%;
            height: calc(100vh - 64px);
            background: rgba(0, 0, 0, 0.5);
            backdrop-filter: blur(4px);
            z-index: 998;
        }

            .overlay.active {
                display: block;
            }

        .main-content {
            padding: 16px;
        }

        }

        @@media (max-width: 480px) {
            .navbar

        {
            padding: 12px 16px;
        }

        .logo span {
            font-size: 16px;
        }

        .user-info span {
            display: none;
        }

        .action-buttons {
            grid-template-columns: 1fr;
        }

        }

        /* Dark mode support */
        @@media (prefers-color-scheme: dark) {
            .navbar, .sidebar

        {
            background: rgba(17, 24, 39, 0.95);
            border-color: rgba(55, 65, 81, 0.8);
            color: #f9fafb;
        }

        .menu-item {
            color: #d1d5db;
        }

            .menu-item:hover {
                background: rgba(79, 70, 229, 0.1);
            }

        .quick-actions {
            background: rgba(30, 41, 59, 0.5);
            border-color: rgba(51, 65, 85, 0.8);
        }

        .action-btn {
            background: rgba(30, 41, 59, 0.8);
            border-color: rgba(51, 65, 85, 0.8);
            color: #e2e8f0;
        }

        }
    </style>
</head>
<body>
    <div class="navbar">
        <div style="display: flex; align-items: center; gap: 16px;">
            <button class="mobile-menu-toggle" onclick="toggleSidebar()">
                <i class="fas fa-bars"></i>
            </button>
            <a class="logo" href="/">
                <div class="logo-icon">
                    <i class="fas fa-users"></i>
                </div>
                <span>Participant Manager</span>
            </a>
        </div>

        <div class="user-info">
            <div class="user-dropdown" onclick="toggleDropdown()">
                <div class="user-avatar">
                    <i class="fas fa-user"></i>
                </div>
                <span>Admin</span>
                <div class="dropdown-menu" id="userDropdown">
                    <a class="dropdown-item" href="#">
                        <i class="fas fa-user-cog"></i>
                        Profile Settings
                    </a>
                    <a class="dropdown-item" href="#">
                        <i class="fas fa-cog"></i>
                        Preferences
                    </a>
                    <div class="dropdown-divider"></div>
                    <a class="dropdown-item" href="#">
                        <i class="fas fa-sign-out-alt"></i>
                        Sign Out
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="overlay" id="overlay" onclick="toggleSidebar()"></div>

    <div class="layout-wrapper">
        <aside class="sidebar" id="sidebar">
            <div class="menu-section">
                <div class="menu-title">Navigation</div>
                <a class="menu-item active" href="#" onclick="navigateTo('Home', 'index')">
                    <span class="menu-icon"><i class="fas fa-home"></i></span>
                    <span>Dashboard</span>
                </a>
                <a class="menu-item" href="#" onclick="navigateTo('participant', 'index')">
                    <span class="menu-icon"><i class="fas fa-users"></i></span>
                    <span>Participants</span>
                    <span class="menu-badge" id="participantBadge">0</span>
                </a>
                <a class="menu-item" href="#" onclick="navigateTo('group', 'index')">
                    <span class="menu-icon"><i class="fas fa-layer-group"></i></span>
                    <span>Groups</span>
                    <span class="menu-badge" id="groupBadge">0</span>
                </a>
                <a class="menu-item" href="#" onclick="navigateTo('pass', 'scan')">
                    <span class="menu-icon"><i class="fas fa-qrcode"></i></span>
                    <span>Scan QR</span>
                </a>
                <a class="menu-item" href="#" onclick="navigateTo('emailconfig', 'index')">
                    <span class="menu-icon"><i class="fas fa-envelope"></i></span>
                    <span>Email</span>
                </a>
            </div>

            <div class="quick-actions">
                <div class="quick-actions-title">
                    <i class="fas fa-bolt"></i>
                    Quick Actions
                </div>
                <div class="action-buttons">
                    <button class="action-btn" onclick="openUploadModal()">
                        <i class="fas fa-upload"></i>
                        Upload
                    </button>
                    <button class="action-btn" onclick="exportToExcel()">
                        <i class="fas fa-download"></i>
                        Export
                    </button>
                    <button class="action-btn" onclick="navigateTo('participant', 'create')">
                        <i class="fas fa-plus"></i>
                        New Participant
                    </button>
                    <button class="action-btn" onclick="navigateTo('group', 'create')">
                        <i class="fas fa-folder-plus"></i>
                        New Group
                    </button>
                </div>
            </div>

            <div class="menu-section">
                <div class="menu-title">System</div>
                <a class="menu-item" href="#">
                    <span class="menu-icon"><i class="fas fa-cog"></i></span>
                    <span>Settings</span>
                </a>
                <a class="menu-item" href="#">
                    <span class="menu-icon"><i class="fas fa-question-circle"></i></span>
                    <span>Help & Support</span>
                </a>
                <a class="menu-item" href="#">
                    <span class="menu-icon"><i class="fas fa-chart-bar"></i></span>
                    <span>Analytics</span>
                </a>
            </div>
        </aside>

        <main role="main" class="main-content">
           
            <div class="alert" id="alertBox"></div>
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - EventManagerMVC - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <script>
        // Navigation and UI functionality
        function navigateTo(controller, action) {
            event.preventDefault();

             
            // Close mobile sidebar
            if (window.innerWidth <= 768) {
                toggleSidebar();
            }

            // Navigate
            window.location.href = `/${controller}/${action}`;
        }

        function updateBreadcrumb(controller, action) {
            const breadcrumb = document.querySelector('.breadcrumb');
            const pageTitles = {
                'home': 'Dashboard',
                'participant': 'Participants',
                'group': 'Groups',
                'pass': 'QR Scanner',
                'emailconfig': 'Email Settings'
            };

            breadcrumb.innerHTML = `
                <div class="breadcrumb-item">Home</div>
                <div class="breadcrumb-item active">${pageTitles[controller.toLowerCase()] || controller}</div>
            `;
        }

        function toggleSidebar() {
            const sidebar = document.getElementById('sidebar');
            const overlay = document.getElementById('overlay');
            sidebar.classList.toggle('active');
            overlay.classList.toggle('active');
        }

        function toggleDropdown() {
            const dropdown = document.getElementById('userDropdown');
            dropdown.classList.toggle('active');
        }

        // Close dropdown when clicking outside
        document.addEventListener('click', function(event) {
            const dropdown = document.getElementById('userDropdown');
            const userDropdown = document.querySelector('.user-dropdown');

            if (!userDropdown.contains(event.target)) {
                dropdown.classList.remove('active');
            }
        });

        // Quick action functions
        function openUploadModal() {
            // Implementation for upload modal
            console.log('Opening upload modal...');
        }

        function exportToExcel() {
            // Implementation for export functionality
            console.log('Exporting to Excel...');
        }

        // Initialize the page
        document.addEventListener('DOMContentLoaded', function() {
            // Add loading animation
            document.body.style.opacity = '0';
            document.body.style.transition = 'opacity 0.3s ease';

            setTimeout(() => {
                document.body.style.opacity = '1';
            }, 100);

            // Close sidebar when clicking on overlay
            document.getElementById('overlay').addEventListener('click', toggleSidebar);
        });
    </script>
</body>
</html>