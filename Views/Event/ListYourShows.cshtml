        const adminEventSubtypes = document.getElementById('adminEventSubtypes');

        // Navigation buttons
        const createEventBtn = document.getElementById('create-event-btn');
        const ctaCreateEvent = document.getElementById('cta-create-event');
        const backToHome = document.getElementById('back-to-home');
        const backToOptions = document.getElementById('back-to-options');
        const backToEventTypes = document.getElementById('back-to-event-types');

        // Option selection
        const exploreEvents = document.getElementById('explore-events');
        const createEvents = document.getElementById('create-events');

        // Event type selection
        const adminControlled = document.getElementById('admin-controlled');
        const openPublic = document.getElementById('open-public');

        // Admin event subtypes
        const nonRsvp = document.getElementById('non-rsvp');
        const comingSoon = document.getElementById('coming-soon');

        // Show event creation page
        function showEventCreationPage() {
            landingPage.style.display = 'none';
            eventCreationPage.style.display = 'block';
            eventTypeSelection.style.display = 'none';
            adminEventSubtypes.style.display = 'none';
        }

        // Show landing page
        function showLandingPage() {
            landingPage.style.display = 'block';
            eventCreationPage.style.display = 'none';
            eventTypeSelection.style.display = 'none';
            adminEventSubtypes.style.display = 'none';
        }

        // Show event type selection
        function showEventTypeSelection() {
            landingPage.style.display = 'none';
            eventCreationPage.style.display = 'none';
            eventTypeSelection.style.display = 'block';
            adminEventSubtypes.style.display = 'none';
        }

        // Show admin event subtypes
        function showAdminEventSubtypes() {
            landingPage.style.display = 'none';
            eventCreationPage.style.display = 'none';
            eventTypeSelection.style.display = 'none';
            adminEventSubtypes.style.display = 'block';
        }

        // Event Listeners
        createEventBtn.addEventListener('click', (e) => {
            e.preventDefault();
            showEventCreationPage();
        });

        ctaCreateEvent.addEventListener('click', (e) => {
            e.preventDefault();
            showEventCreationPage();
        });

        backToHome.addEventListener('click', (e) => {
            e.preventDefault();
            showLandingPage();
        });

        backToOptions.addEventListener('click', (e) => {
            e.preventDefault();
            showEventCreationPage();
        });

        backToEventTypes.addEventListener('click', (e) => {
            e.preventDefault();
            showEventTypeSelection();
        });

        exploreEvents.addEventListener('click', () => {
            alert('Explore Events feature would open here!');
            // In a real app, this would navigate to the events exploration page
        });

        createEvents.addEventListener('click', () => {
            showEventTypeSelection();
        });

        adminControlled.addEventListener('click', () => {
            showAdminEventSubtypes();
        });

        openPublic.addEventListener('click', () => {
            alert('Open Public Events are coming soon!');
        });

        nonRsvp.addEventListener('click', () => {
           // alert('Non RSVP Event creation would start here!');
            window.location.href ='/Event/Create';
            // In a real app, this would navigate to the event creation form
        });

        comingSoon.addEventListener('click', () => {
            alert('Coming Soon Event creation would start here!');
            // In a real app, this would navigate to the event creation form
        });

        // Mobile menu functionality
        document.querySelector('.mobile-menu').addEventListener('click', function() {
            document.querySelector('.nav-links').classList.toggle('active');
        });

        // Close mobile menu when clicking on a link
        document.querySelectorAll('.nav-links a').forEach(link => {
            link.addEventListener('click', () => {
                document.querySelector('.nav-links').classList.remove('active');
            });
        });
