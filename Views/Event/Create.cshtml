    <script>
        // Sample access points
        const defaultAccessPoints = [
            { id: 'main-entrance', name: 'Main Entrance', icon: 'door-open' },
            { id: 'vip-lounge', name: 'VIP Lounge', icon: 'crown' },
            { id: 'exhibition-hall', name: 'Exhibition Hall', icon: 'images' },
            { id: 'conference-room-a', name: 'Conference Room A', icon: 'users' },
            { id: 'conference-room-b', name: 'Conference Room B', icon: 'users' },
            { id: 'networking-area', name: 'Networking Area', icon: 'comments' },
            { id: 'dining-area', name: 'Dining Area', icon: 'utensils' },
            { id: 'parking', name: 'Parking Area', icon: 'parking' }
        ];

        let selectedAccessPoints = [];
        let eventDrafts = [];
        let participants = [];

        // Initialize the page
        function initializePage() {
            setupEventListeners();

            // Load any existing drafts from localStorage
            const savedDrafts = localStorage.getItem('eventDrafts');
            if (savedDrafts) {
                eventDrafts = JSON.parse(savedDrafts);
            }

            // Set minimum date to today
            const today = new Date().toISOString().split('T')[0];
            document.getElementById('eventDate').min = today;
            document.getElementById('eventEndDate').min = today;
        }

        // Setup event listeners
        function setupEventListeners() {
            document.getElementById('createEventBtn').addEventListener('click', createEvent);
            document.getElementById('saveDraftBtn').addEventListener('click', saveDraft);
            document.getElementById('addParticipantBtn').addEventListener('click', addParticipant);
            
            // Participant option selection
            document.querySelectorAll('.participant-option').forEach(option => {
                option.addEventListener('click', function() {
                    const radio = this.querySelector('.option-radio');
                    radio.checked = true;
                    updateParticipantOptions();
                });
            });
            
            // Limit common usage checkbox
            document.getElementById('limitCommonUsage').addEventListener('change', function() {
                document.getElementById('commonUsageLimitGroup').style.display = this.checked ? 'block' : 'none';
            });
        }

        // Update participant options UI
        function updateParticipantOptions() {
            // Remove selected class from all options
            document.querySelectorAll('.participant-option').forEach(option => {
                option.classList.remove('selected');
            });
            
            // Add selected class to current option
            const selectedOption = document.querySelector('.option-radio:checked').closest('.participant-option');
            selectedOption.classList.add('selected');
            
            // Show/hide details based on selection
            const optionValue = selectedOption.dataset.option;
            
            document.getElementById('commonQrDetails').classList.remove('active');
            document.getElementById('individualQrDetails').classList.remove('active');
            
            if (optionValue === 'common') {
                document.getElementById('commonQrDetails').classList.add('active');
            } else if (optionValue === 'individual') {
                document.getElementById('individualQrDetails').classList.add('active');
            }
        }

        // Add participant to the list
        function addParticipant() {
            const name = document.getElementById('participantName').value;
            const email = document.getElementById('participantEmail').value;
            
            if (!name) {
                showAlert('Please enter a participant name', 'error');
                return;
            }
            
            const participant = {
                id: generateId(),
                name: name,
                email: email,
                qrCode: generateQRCode()
            };
            
            participants.push(participant);
            updateParticipantList();
            
            // Clear input fields
            document.getElementById('participantName').value = '';
            document.getElementById('participantEmail').value = '';
            
            showAlert(`Participant "${name}" added successfully`, 'success');
        }

        // Remove participant from the list
        function removeParticipant(id) {
            participants = participants.filter(p => p.id !== id);
            updateParticipantList();
        }

        // Update the participant list UI
        function updateParticipantList() {
            const participantList = document.getElementById('participantList');
            participantList.innerHTML = '';
            
            if (participants.length === 0) {
                participantList.innerHTML = '<div style="text-align: center; padding: 15px; color: var(--text-medium);">No participants added yet</div>';
                return;
            }
            
            participants.forEach(participant => {
                const participantElement = document.createElement('div');
                participantElement.className = 'participant-item';
                participantElement.innerHTML = `
                    <div class="participant-info">
                        <div class="participant-avatar">${participant.name.charAt(0).toUpperCase()}</div>
                        <div>
                            <div class="participant-name">${participant.name}</div>
                            <div style="font-size: 12px; color: var(--text-medium);">${participant.email || 'No email provided'}</div>
                        </div>
                    </div>
                    <div class="participant-actions">
                        <button class="btn btn-sm btn-danger" onclick="removeParticipant('${participant.id}')">
                            <i class="fas fa-trash"></i> Remove
                        </button>
                    </div>
                `;
                participantList.appendChild(participantElement);
            });
        }

        // Create event
        function createEvent() {
            const eventName = document.getElementById('eventName').value;
            const eventDate = document.getElementById('eventDate').value;
            const eventTime = document.getElementById('eventTime').value;
            const participantOption = document.querySelector('.option-radio:checked').closest('.participant-option').dataset.option;

            if (!eventName) {
                showAlert('Please enter an event name', 'error');
                return;
            }

            if (!eventDate) {
                showAlert('Please select an event date', 'error');
                return;
            }

            if (!eventTime) {
                showAlert('Please select an event time', 'error');
                return;
            }

            // Validate participant options
            if (participantOption === 'individual' && participants.length === 0) {
                showAlert('Please add at least one participant for individual QR codes', 'error');
                return;
            }

            // Create event object
            const event = {
                id: generateEventId(),
                name: eventName,
                description: document.getElementById('eventDescription').value,
                date: eventDate,
                time: eventTime,
                endDate: document.getElementById('eventEndDate').value,
                endTime: document.getElementById('eventEndTime').value,
                location: document.getElementById('eventLocation').value,
                capacity: document.getElementById('eventCapacity').value,
                category: document.getElementById('eventCategory').value,
                coordinator: document.getElementById('eventCoordinator').value,
                code: document.getElementById('eventCode').value || generateEventCode(),
                participantOption: participantOption,
                participants: participants,
                commonQrName: document.getElementById('commonQrName').value,
                limitCommonUsage: document.getElementById('limitCommonUsage').checked,
                commonUsageLimit: document.getElementById('commonUsageLimit').value,
                sendIndividualQr: document.getElementById('sendIndividualQr').checked,
                trackAttendance: document.getElementById('trackAttendance').checked,
                sendNotifications: document.getElementById('sendNotifications').checked,
                created: new Date().toISOString(),
                type: 'non-rsvp'
            };

            // Save event to localStorage
            const savedEvents = localStorage.getItem('events');
            const events = savedEvents ? JSON.parse(savedEvents) : [];
            events.push(event);
            localStorage.setItem('events', JSON.stringify(events));

            showAlert('Event created successfully!', 'success');

            // Reset form
            resetForm();

            // Redirect to event management page (simulated)
            setTimeout(() => {
                alert('Redirecting to event management page...');
                // In a real app, you would redirect to the event management page
                // window.location.href = 'event-management.html';
            }, 1500);
        }

