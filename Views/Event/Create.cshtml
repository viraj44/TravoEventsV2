            color: var(--text-dark);
        }

        .form-group {
            margin-bottom: 15px;
        }

        .form-label {
            display: block;
            margin-bottom: 6px;
            color: var(--text-dark);
            font-weight: 600;
            font-size: 14px;
        }

        .form-input, .form-select, .form-textarea {
            width: 100%;
            padding: 10px 12px;
            border: 1px solid var(--border-yellow);
            border-radius: 6px;
            font-size: 15px;
            color: var(--text-dark);
            transition: all 0.15s ease;
            -webkit-appearance: none;
            background: var(--white);
        }

        .form-textarea {
            min-height: 100px;
            resize: vertical;
        }

        .form-input:focus, .form-select:focus, .form-textarea:focus {
            outline: none;
            border-color: var(--dark-yellow);
            box-shadow: 0 0 0 2px rgba(230, 162, 0, 0.1);
        }

        .form-row {
            display: flex;
            gap: 12px;
        }

        .form-row .form-group {
            flex: 1;
        }

        .checkbox-group {
            display: flex;
            align-items: center;
            gap: 8px;
            margin-bottom: 15px;
        }

        .checkbox-label {
            font-size: 14px;
            color: var(--text-dark);
        }

        .checkbox {
            width: 18px;
            height: 18px;
            accent-color: var(--primary-yellow);
        }

        .btn {
            background: var(--white);
            color: var(--text-dark);
            border: 1px solid var(--primary-yellow);
            padding: 10px 14px;
            border-radius: 6px;
            font-size: 14px;
            cursor: pointer;
            transition: all 0.2s ease;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            gap: 6px;
            font-weight: 500;
            width: 100%;
        }

        .btn:hover {
            background: var(--light-yellow);
            border-color: var(--dark-yellow);
        }

        .btn-primary {
            background: linear-gradient(135deg, var(--primary-yellow) 0%, var(--dark-yellow) 100%);
            color: var(--white);
            border: none;
        }

        .btn-primary:hover {
            box-shadow: 0 4px 12px var(--shadow);
        }

        .btn-secondary {
            background: var(--primary-yellow);
            color: var(--text-dark);
            border: none;
        }

        .btn-secondary:hover {
            background: var(--dark-yellow);
            color: var(--white);
            box-shadow: 0 4px 12px var(--shadow);
        }

        .btn-danger {
            background: var(--white);
            color: var(--danger);
            border: 1px solid #fecaca;
        }

        .btn-danger:hover {
            background: #fef2f2;
        }

        .btn-sm {
            padding: 8px 12px;
            font-size: 13px;
            width: auto;
        }

        .action-buttons {
            display: flex;
            gap: 8px;
            margin-top: 10px;
        }

        .action-buttons .btn {
            flex: 1;
        }

        .access-points {
            margin-top: 15px;
        }

        .access-point-item {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 10px;
            border: 1px solid var(--border-yellow);
            border-radius: 6px;
            margin-bottom: 8px;
            background: var(--light-yellow);
        }

        .access-point-info {
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .access-point-icon {
            width: 32px;
            height: 32px;
            background: linear-gradient(135deg, var(--primary-yellow) 0%, var(--dark-yellow) 100%);
            border-radius: 6px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: var(--white);
            font-size: 14px;
        }

        .access-point-name {
            font-weight: 600;
            font-size: 14px;
            color: var(--text-dark);
        }

        .access-point-actions {
            display: flex;
            gap: 6px;
        }

        .alert {
            padding: 10px 12px;
            border-radius: 6px;
            margin-bottom: 12px;
            display: none;
            animation: slideDown 0.3s ease;
            border: 1px solid;
            font-size: 13px;
        }

        .alert.success {
            background: var(--light-yellow);
            color: var(--text-dark);
            border-color: var(--primary-yellow);
        }

        .alert.error {
            background: #fff5e6;
            color: #cc5500;
            border-color: #ffcc99;
        }

        .alert.warning {
            background: #fffbeb;
            color: #92400e;
            border-color: #fed7aa;
        }

        .alert.active {
            display: flex;
            align-items: center;
            gap: 8px;
        }

        @@keyframes slideDown {
            from {
                transform: translateY(-8px);
                opacity: 0;
            }
            to {
                transform: translateY(0);
                opacity: 1;
            }
