    <script>
        // Sample data for the application
        const sampleAttendees = [
            { id: 'A-001', firstName: 'John', lastName: 'Smith', email: 'john.smith@example.com', company: 'Tech Corp', department: 'Executive' },
            { id: 'A-002', firstName: 'Sarah', lastName: 'Johnson', email: 'sarah.j@example.com', company: 'Innovate Ltd', department: 'Technology' },
            { id: 'A-003', firstName: 'Michael', lastName: 'Brown', email: 'm.brown@example.com', company: 'Global Solutions', department: 'Management' },
            { id: 'A-004', firstName: 'Emily', lastName: 'Davis', email: 'emily.davis@example.com', company: 'Creative Minds', department: 'Design' },
            { id: 'A-005', firstName: 'David', lastName: 'Wilson', email: 'd.wilson@example.com', company: 'Future Tech', department: 'Engineering' },
            { id: 'A-006', firstName: 'Lisa', lastName: 'Anderson', email: 'l.anderson@example.com', company: 'Data Systems', department: 'Analytics' }
        ];

        // Application state
        let attendees = JSON.parse(localStorage.getItem('attendees')) || [...sampleAttendees];
        let accessPoints = JSON.parse(localStorage.getItem('accessPoints')) || [];
        let assignments = JSON.parse(localStorage.getItem('assignments')) || [];

        // Selection state for assignments
        let selectedAttendees = [];
        let selectedAccessPoints = [];

        // DOM Elements
        const notification = document.getElementById('notification');
        const notificationText = document.getElementById('notificationText');

        // Initialize the application
        document.addEventListener('DOMContentLoaded', () => {
            updateDashboard();
            renderAccessPoints();
            renderAttendeesSelection();
            renderAccessPointsSelection();
            renderAssignments();
            setupEventListeners();
        });

        // Set up event listeners
        function setupEventListeners() {
            // Tab switching
            document.querySelectorAll('.tab').forEach(tab => {
                tab.addEventListener('click', () => {
                    // Remove active class from all tabs and content sections
                    document.querySelectorAll('.tab').forEach(t => t.classList.remove('active'));
                    document.querySelectorAll('.content-section').forEach(s => s.classList.remove('active'));

                    // Add active class to clicked tab and corresponding section
                    tab.classList.add('active');
                    const sectionId = tab.getAttribute('data-section');
                    document.getElementById(sectionId).classList.add('active');
                });
            });

            // Form submission
            document.getElementById('accessPointForm').addEventListener('submit', handleAccessPointSubmit);

            // Assignment buttons
            document.getElementById('assignBtn').addEventListener('click', assignAccessPoints);
            document.getElementById('unassignBtn').addEventListener('click', unassignAccessPoints);

            // Multi-select controls
            document.getElementById('selectAllAttendees').addEventListener('click', selectAllAttendees);
            document.getElementById('deselectAllAttendees').addEventListener('click', deselectAllAttendees);
            document.getElementById('selectAllAccessPoints').addEventListener('click', selectAllAccessPoints);
            document.getElementById('deselectAllAccessPoints').addEventListener('click', deselectAllAccessPoints);
        }

        // Handle access point form submission
        function handleAccessPointSubmit(e) {
            e.preventDefault();

            const name = document.getElementById('accessPointName').value;
            const description = document.getElementById('accessPointDescription').value;

            if (!name.trim()) {
                showNotification('Please enter an access point name', 'error');
                return;
            }

            const newId = 'AP-' + String(accessPoints.length + 1).padStart(3, '0');
            accessPoints.push({
                id: newId,
                name: name.trim(),
                description: description.trim() || 'No description provided'
            });

            saveData();
            renderAccessPoints();
            renderAccessPointsSelection();
            document.getElementById('accessPointForm').reset();
            showNotification('Access point created successfully!');
            updateDashboard();
        }

        // Render access points in the grid
        function renderAccessPoints() {
            const container = document.getElementById('existingAccessPoints');
            container.innerHTML = '';

            if (accessPoints.length === 0) {
                container.innerHTML = `
                        <div class="empty-state">
                            <i class="fas fa-door-closed"></i>
                            <p>No access points created yet</p>
                            <p class="assign-item-details" style="margin-top: 10px;">Create your first access point using the form on the left</p>
                        </div>
                    `;
                return;
            }

            accessPoints.forEach(ap => {
                const card = document.createElement('div');
                card.className = 'access-point-card';
                card.innerHTML = `
                        <div class="access-point-header">
                            <div class="access-point-name">${ap.name}</div>
                            <div class="access-point-status status-active">
                                Active
                            </div>
                        </div>
                        <div class="access-point-details">
                            <div><i class="fas fa-info-circle"></i> ${ap.description}</div>
                        </div>
                        <div class="access-point-actions">
                            <button class="action-btn edit-btn" data-id="${ap.id}">
                                <i class="fas fa-edit"></i> Edit
                            </button>
                            <button class="action-btn delete-btn" data-id="${ap.id}">
                                <i class="fas fa-trash"></i> Delete
                            </button>
                        </div>
                    `;
                container.appendChild(card);
            });

            // Add event listeners to action buttons
            document.querySelectorAll('.edit-btn').forEach(btn => {
                btn.addEventListener('click', (e) => {
                    const id = e.target.closest('button').getAttribute('data-id');
                    editAccessPoint(id);
                });
            });

            document.querySelectorAll('.delete-btn').forEach(btn => {
                btn.addEventListener('click', (e) => {
                    const id = e.target.closest('button').getAttribute('data-id');
                    deleteAccessPoint(id);
                });
            });
        }

        // Render attendees for selection
        function renderAttendeesSelection() {
            const container = document.getElementById('attendeesSelectionList');
            container.innerHTML = '';

            if (attendees.length === 0) {
                container.innerHTML = `
                        <div class="empty-state">
                            <i class="fas fa-users"></i>
                            <p>No attendees available</p>
                        </div>
                    `;
                return;
            }

            attendees.forEach(attendee => {
                const item = document.createElement('div');
                item.className = 'assign-item';
                item.setAttribute('data-id', attendee.id);
                item.innerHTML = `
                        <div class="assign-item-avatar">
                            ${attendee.firstName.charAt(0)}${attendee.lastName.charAt(0)}
                        </div>
                        <div class="assign-item-info">
                            <div class="assign-item-name">${attendee.firstName} ${attendee.lastName}</div>
                            <div class="assign-item-details">${attendee.company} • ${attendee.department}</div>
                        </div>
                    `;
                container.appendChild(item);

                // Add click event to select attendee
                item.addEventListener('click', (e) => {
                    // Handle multi-select with Ctrl key
                    if (e.ctrlKey || e.metaKey) {
                        // Toggle selection
                        if (selectedAttendees.includes(attendee.id)) {
                            selectedAttendees = selectedAttendees.filter(id => id !== attendee.id);
                            item.classList.remove('selected');
                        } else {
                            selectedAttendees.push(attendee.id);
                            item.classList.add('selected');
                        }
                    } else {
                        // Single select - clear all and select this one
                        selectedAttendees = [attendee.id];
                        document.querySelectorAll('#attendeesSelectionList .assign-item').forEach(i => {
                            i.classList.remove('selected');
                        });
                        item.classList.add('selected');
                    }

                    updateSelectionCounts();
                });
            });

            updateSelectionCounts();
        }

        // Render access points for selection
        function renderAccessPointsSelection() {
            const container = document.getElementById('accessPointsSelectionList');
            container.innerHTML = '';

            if (accessPoints.length === 0) {
                container.innerHTML = `
                        <div class="empty-state">
                            <i class="fas fa-door-closed"></i>
                            <p>No access points available</p>
                            <p class="assign-item-details" style="margin-top: 10px;">Create access points first in the "Create Access Point" tab</p>
                        </div>
                    `;
                return;
            }

            accessPoints.forEach(ap => {
                const item = document.createElement('div');
                item.className = 'assign-item';
                item.setAttribute('data-id', ap.id);
                item.innerHTML = `
                        <div class="assign-item-avatar">
                            <i class="fas fa-door-open"></i>
                        </div>
                        <div class="assign-item-info">
                            <div class="assign-item-name">${ap.name}</div>
                            <div class="assign-item-details">${ap.description}</div>
                        </div>
                    `;
                container.appendChild(item);

                // Add click event to select access point
                item.addEventListener('click', (e) => {
                    // Handle multi-select with Ctrl key
                    if (e.ctrlKey || e.metaKey) {
                        // Toggle selection
                        if (selectedAccessPoints.includes(ap.id)) {
                            selectedAccessPoints = selectedAccessPoints.filter(id => id !== ap.id);
                            item.classList.remove('selected');
                        } else {
                            selectedAccessPoints.push(ap.id);
                            item.classList.add('selected');
                        }
                    } else {
                        // Single select - clear all and select this one
                        selectedAccessPoints = [ap.id];
                        document.querySelectorAll('#accessPointsSelectionList .assign-item').forEach(i => {
                            i.classList.remove('selected');
                        });
                        item.classList.add('selected');
                    }

                    updateSelectionCounts();
                });
            });

            updateSelectionCounts();
        }

        // Update selection count badges
        function updateSelectionCounts() {
            document.getElementById('selectedAttendeesCount').textContent = `${selectedAttendees.length} selected`;
            document.getElementById('selectedAccessPointsCount').textContent = `${selectedAccessPoints.length} selected`;
        }

        // Render assignments table
        function renderAssignments() {
            const tbody = document.querySelector('#assignmentsTable tbody');
            tbody.innerHTML = '';

            if (assignments.length === 0) {
                tbody.innerHTML = `
                        <tr>
                            <td colspan="4" style="text-align: center; padding: 40px; color: var(--gray);">
                                <i class="fas fa-unlink" style="font-size: 2rem; margin-bottom: 10px; display: block;"></i>
                                No assignments found
                                <p class="assign-item-details" style="margin-top: 10px;">Select attendees and access points to create assignments</p>
                            </td>
                        </tr>
                    `;
                return;
            }

            assignments.forEach(assignment => {
                const attendee = attendees.find(a => a.id === assignment.attendeeId);

                if (attendee) {

                    var accessPointNames = 'Main Entry';
                    if (assignment.accessPointIds != null && assignment.accessPointIds != undefined) {

                        accessPointNames = assignment.accessPointIds.map(apId => {
                            const ap = accessPoints.find(ap => ap.id === apId);
                            return ap ? ap.name : 'Unknown';
                        }).join(', ');
                    }

                    const tr = document.createElement('tr');
                    tr.innerHTML = `
                            <td>
                                <div style="display: flex; align-items: center; gap: 10px;">
                                    <div style="width: 32px; height: 32px; border-radius: 50%; background-color: var(--primary-light); display: flex; align-items: center; justify-content: center; font-weight: 600; color: var(--primary-dark); font-size: 0.8rem;">
                                        ${attendee.firstName.charAt(0)}${attendee.lastName.charAt(0)}
                                    </div>
                                    ${attendee.firstName} ${attendee.lastName}
                                </div>
                            </td>
                            <td>${accessPointNames}</td>
                            <td>${assignment.assignedDate}</td>
                            <td>
                                <button class="action-btn delete-btn" data-id="${assignment.id}">
                                    <i class="fas fa-trash"></i> Remove
                                </button>
                            </td>
                        `;
                    tbody.appendChild(tr);
                }
            });

            // Add event listeners to remove buttons
            document.querySelectorAll('#assignmentsTable .delete-btn').forEach(btn => {
                btn.addEventListener('click', (e) => {
                    const id = e.target.closest('button').getAttribute('data-id');
                    removeAssignment(id);
                });
            });
        }

        // Assign multiple access points to multiple attendees
        function assignAccessPoints() {
            if (selectedAttendees.length === 0 || selectedAccessPoints.length === 0) {
                showNotification('Please select at least one attendee and one access point', 'warning');
                return;
            }

            let assignmentsCreated = 0;

            selectedAttendees.forEach(attendeeId => {
                selectedAccessPoints.forEach(apId => {
                    // Check if this specific assignment already exists
                    const existingAssignment = assignments.find(a =>
                        a.attendeeId === attendeeId && a.accessPointIds.includes(apId)
                    );

                    if (!existingAssignment) {
                        // Find if there's an assignment for this attendee
                        let assignment = assignments.find(a => a.attendeeId === attendeeId);

                        if (assignment) {
                            // Add to existing assignment
                            assignment.accessPointIds.push(apId);
                        } else {
                            // Create new assignment
                            const newAssignment = {
                                id: 'ASG-' + (assignments.length + 1).toString().padStart(3, '0'),
                                attendeeId: attendeeId,
                                accessPointIds: [apId],
                                assignedDate: new Date().toISOString().split('T')[0]
                            };
                            assignments.push(newAssignment);
                        }
                        assignmentsCreated++;
                    }
                });
            });

            if (assignmentsCreated === 0) {
                showNotification('All selected assignments already exist', 'warning');
                return;
            }

            saveData();
            renderAssignments();
            showNotification(`Successfully created ${assignmentsCreated} assignment(s)!`);
            updateDashboard();

            // Clear selection
            selectedAttendees = [];
            selectedAccessPoints = [];
            document.querySelectorAll('.assign-item.selected').forEach(item => {
                item.classList.remove('selected');
            });
            updateSelectionCounts();
        }

        // Unassign access points from attendees
        function unassignAccessPoints() {
            if (selectedAttendees.length === 0 || selectedAccessPoints.length === 0) {
                showNotification('Please select at least one attendee and one access point to unassign', 'warning');
                return;
            }

            let assignmentsRemoved = 0;
            const assignmentsToRemove = [];

            selectedAttendees.forEach(attendeeId => {
                selectedAccessPoints.forEach(apId => {
                    assignments.forEach(assignment => {
                        if (assignment.attendeeId === attendeeId && assignment.accessPointIds.includes(apId)) {
                            // Remove the specific access point from the assignment
                            assignment.accessPointIds = assignment.accessPointIds.filter(id => id !== apId);
                            assignmentsRemoved++;

                            // If no access points left, mark for removal
                            if (assignment.accessPointIds.length === 0) {
                                assignmentsToRemove.push(assignment.id);
                            }
                        }
                    });
                });
            });

            // Remove empty assignments
            assignments = assignments.filter(a => !assignmentsToRemove.includes(a.id));

            if (assignmentsRemoved === 0) {
                showNotification('No matching assignments found to remove', 'warning');
                return;
            }

            saveData();
            renderAssignments();
            showNotification(`Successfully removed ${assignmentsRemoved} assignment(s)!`);
            updateDashboard();

            // Clear selection
            selectedAttendees = [];
            selectedAccessPoints = [];
            document.querySelectorAll('.assign-item.selected').forEach(item => {
                item.classList.remove('selected');
            });
            updateSelectionCounts();
        }

        // Remove assignment from table
        function removeAssignment(id) {
            const assignmentIndex = assignments.findIndex(a => a.id === id);

            if (assignmentIndex !== -1) {
                assignments.splice(assignmentIndex, 1);
                saveData();
                renderAssignments();
                showNotification('Assignment removed successfully!');
                updateDashboard();
            }
        }

        // Select all attendees
        function selectAllAttendees() {
            selectedAttendees = attendees.map(a => a.id);
            document.querySelectorAll('#attendeesSelectionList .assign-item').forEach(item => {
                item.classList.add('selected');
            });
            updateSelectionCounts();
        }

        // Deselect all attendees
        function deselectAllAttendees() {
            selectedAttendees = [];
            document.querySelectorAll('#attendeesSelectionList .assign-item').forEach(item => {
                item.classList.remove('selected');
            });
            updateSelectionCounts();
        }

        // Select all access points
        function selectAllAccessPoints() {
            selectedAccessPoints = accessPoints.map(ap => ap.id);
            document.querySelectorAll('#accessPointsSelectionList .assign-item').forEach(item => {
                item.classList.add('selected');
            });
            updateSelectionCounts();
        }

        // Deselect all access points
        function deselectAllAccessPoints() {
            selectedAccessPoints = [];
            document.querySelectorAll('#accessPointsSelectionList .assign-item').forEach(item => {
                item.classList.remove('selected');
            });
            updateSelectionCounts();
        }

        // Edit access point
        function editAccessPoint(id) {
            const ap = accessPoints.find(ap => ap.id === id);
            if (!ap) return;

            document.getElementById('accessPointName').value = ap.name;
            document.getElementById('accessPointDescription').value = ap.description;

            // Remove the access point being edited
            accessPoints = accessPoints.filter(ap => ap.id !== id);
            saveData();
            renderAccessPoints();
            renderAccessPointsSelection();

            showNotification('Access point loaded for editing. Update the form and click Create to save changes.', 'warning');
        }

        // Delete access point
        function deleteAccessPoint(id) {
            if (confirm('Are you sure you want to delete this access point? This will also remove all assignments to this access point.')) {
                // Remove access point from assignments
                assignments.forEach(assignment => {
                    assignment.accessPointIds = assignment.accessPointIds.filter(apId => apId !== id);
                });

                // Remove assignments with no access points
                assignments = assignments.filter(a => a.accessPointIds.length > 0);

                // Remove the access point
                accessPoints = accessPoints.filter(ap => ap.id !== id);

                saveData();
                renderAccessPoints();
                renderAccessPointsSelection();
                renderAssignments();
                showNotification('Access point deleted successfully!');
                updateDashboard();
            }
        }

        // Update dashboard statistics
        function updateDashboard() {
            document.getElementById('totalAccessPoints').textContent = accessPoints.length;

            // Calculate total assignments (counting each access point per attendee)
            const totalAssignments = assignments.reduce((total, assignment) => {
                return total + (assignment.accessPointIds.length == undefined ? 0 : assignment.accessPointIds.length);
            }, 0);

            document.getElementById('activeAssignments').textContent = totalAssignments;
        }

        // Save data to localStorage
        function saveData() {
            localStorage.setItem('accessPoints', JSON.stringify(accessPoints));
            localStorage.setItem('assignments', JSON.stringify(assignments));
        }

        // Show notification
        function showNotification(message, type = 'success') {
            notificationText.textContent = message;
            notification.className = 'notification';
            notification.classList.add(type);
            notification.classList.add('show');

            setTimeout(() => {
                notification.classList.remove('show');
            }, 3000);
        }
    </script>
 